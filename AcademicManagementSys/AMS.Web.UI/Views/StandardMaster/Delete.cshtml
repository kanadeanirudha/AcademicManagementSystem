@model AMS.Web.UI.Models.StandardMaster
@{
    ViewBag.Title = "Delete";
}

@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")

<div id='dlgEdit'>
    <div class="col-md-10">
        <div class="row">
            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Standard Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        <h4>Are you sure you want to delete this?</h4>
                        <fieldset>
                              <legend>Standard Details</legend>
                                
                                <div class="display-label">Standard Name</div>
                                <div class="display-field">@Model.StandardName</div>
                                <br />
                                <div class="display-label">Standard Number</div>  
                                <div class="display-field">@Model.StandardNumber</div>
                                 <br />
                                <div class="display-label">ShortCode</div> 
                                <div class="display-field">@Model.ShortCode</div>
                                 <br />
                                <div class="display-label">PrintCode</div> 
                                <div class="display-field">@Model.PrintCode</div>

                            </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}