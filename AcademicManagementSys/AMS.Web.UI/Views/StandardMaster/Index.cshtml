@model IEnumerable<AMS.Web.UI.Models.StandardMaster>
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<!-- jquery for pop window  -->
<div id='divLoginButton'>
    <div id='divLogon'>
    </div>
    <div class="col-md-10">
        <div class="row">
            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Standard Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Index</legend>

                            <p>
                                <a href='javascript:showLogonDialog();'>Create New Standard</a>
                            </p>
                            <script type="text/javascript">

                                function showLogonDialog() {
                                    if ($("#dlgLogin").length == 0) {
                                        // ajax load
                                        $('#divLogon').load("@Url.Action("OpenCreate", "StandardMaster")");
                                    } else {
                                        // clear username & password fields
                                        $('#StandardName,#StandardNumber,#ShortCode', '#PrintCode').val('');


                                        // reopen the login dialog which was previously rendered
                                        $("#dlgLogin").dialog("open");
                                    }
                                }
                            </script>
                           
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>
                                        Action
                                    </th>

                                    <th>
                                        Standard Name
                                    </th>
                                    <th>
                                        Standard Number
                                    </th>

                                    <th>
                                        Short Code
                                    </th>

                                    <th>
                                        Print Code
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                               @*   <a href='javascript:showEditDialog();'>Edit</a> |
                                        <script type="text/javascript">

                                            function showEditDialog() {
                                                if ($("#dlgEdit").length == 0) {
                                                    // ajax load
                                                    $('#divLogon').load("@Url.Action("OpenEdit", "StandardMaster")");
                                                } else {
                                                    // clear username & password fields
                                                    $('#StandardName,#StandardNumber,#ShortCode', '#PrintCode').val('');
                                                  

                                                    // reopen the login dialog which was previously rendered
                                                    $("#dlgEdit").dialog("open");
                                                }
                                            }
                                        </script>*@
                                      @Html.ActionLink("Edit", "Edit", new { ID = item.ID }) |
                                                     @Html.ActionLink("Details", "Details", new { ID = item.ID }) |
                                          @*  <a href='javascript:showDetailsDialog();'>Details</a> |
                                        <script type="text/javascript">

                                            function showDetailsDialog() {
                                                if ($("#dlgEdit").length == 0) {
                                                    // ajax load
                                                    $('#divLogon').load("@Url.Action("OpenDetails", "StandardMaster")");
                                                } else {
                                                    // clear username & password fields
                                                    $('#StandardName,#StandardNumber,#ShortCode', '#PrintCode').val('');


                                                    // reopen the login dialog which was previously rendered
                                                    $("#dlgEdit").dialog("open");
                                                }
                                            }
                                        </script>*@
                                        @Html.ActionLink("Delete", "Delete", new { ID = item.ID })
                                        </td>
                                        <td>
                                            @item.StandardName
                                        </td>
                                        <td>
                                            @item.StandardNumber
                                        </td>    
                                        <td>
                                            @item.ShortCode
                                        </td>
                                        <td>
                                            @item.PrintCode
                                        </td>
                                    </tr>
                                }
                            </table>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
