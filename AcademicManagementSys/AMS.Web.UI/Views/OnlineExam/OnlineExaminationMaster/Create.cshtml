@model AMS.ViewModel.OnlineExaminationMasterViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />
<style>
    .ui-front {
        z-index: 9999;
    }
</style>
<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive">Create Exam</h5>
    </div>
    <div class="widget-content">
        <form id="FormCreateOnlineExaminationMaster" method="post" class="form-horizontal well">
            <div class="nonboxy-widget">
                <div class="row">
                    <div class="span9">
                    </div>
                </div>
                <h6>Exam Info </h6>
                <br />
                <div class="row control-group">
                    <div class="span2">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.ExaminationName, new { @class = "", style = "font-Weight:Bold;" })
                    </div>
                    <div class="span6">
                        @Html.TextBoxFor(model => model.ExaminationName, new { style = "width:115%;font-Weight:Bold", maxlength = "60" })
                        <br />
                        @Html.ValidationMessageFor(model => model.ExaminationName)
                    </div>
                </div>
                <div class="row control-group">
                    <div class="span2">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">&nbsp;</span>
                        @Html.LabelFor(model => model.Purpose, new { @class = "", style = "font-Weight:Bold;" })
                    </div>
                    <div class="span6">
                        @Html.TextBoxFor(model => model.Purpose, new { style = "width:115%;font-Weight:Bold", maxlength = "60" })
                    </div>
                </div>
                <div class="row control-group">
                    <div class="span2">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(m => m.AcadSessionId, new { style = "font-Weight:Bold;" })
                    </div>
                    <div class="span2" style="line-height: 25px">
                        @Html.DropDownListFor(model => model.AcadSessionId, Model.AcademicSessionListMasterItem, new { maxlength = "60", style = "font-Weight:Bold;" })
                        <br />
                        @Html.ValidationMessageFor(m => m.AcadSessionId)
                    </div>
                    <div class="span2" style="margin-left: 10%">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(m => m.TotalQuestion, new { style = "font-Weight:Bold;" })
                    </div>
                    <div class="span2" style="line-height: 25px">
                        @Html.TextBoxFor(model => model.TotalQuestion, new { @class = "txtbox", minlength = "1", maxlength = "30", style = "font-Weight:Bold;" })
                        <br />
                        @Html.ValidationMessageFor(m => m.TotalQuestion)
                    </div>
                </div>
                <div class="row control-group">
                    <div class="span2">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.MarksInEachQuestion, new { style = "font-Weight:Bold;" })
                    </div>
                    <div class="span2" style="line-height: 25px">
                        @Html.TextBoxFor(model => model.MarksInEachQuestion, new { @class = "txtbox", maxlength = "30", style = "font-Weight:Bold;" })
                        <br />
                        @Html.ValidationMessageFor(m => m.MarksInEachQuestion)
                    </div>
                    <div class="span2" style="margin-left: 10%">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">&nbsp;</span>
                        @Html.LabelFor(model => model.TotalMarks, new { style = "font-Weight:Bold;" })
                    </div>
                    <div class="span2" style="line-height: 25px">
                        @Html.TextBoxFor(model => model.TotalMarks, new { style = "font-Weight:Bold;", disabled = "disabled" })
                        <br />
                        @Html.ValidationMessageFor(m => m.TotalMarks)
                    </div>
                </div>
                <div class="row control-group">
                    <div class="span2">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.TotalTime, new { style = "font-Weight:Bold;" })
                    </div>
                    <div class="span2" style="line-height: 25px">
                        @Html.TextBoxFor(model => model.TotalTime, new { maxlength = "30", style = "font-Weight:Bold;" })
                        <br />
                        @Html.ValidationMessageFor(m => m.TotalTime)
                    </div>
                    <div class="span2" style="margin-left: 10%">
                        @Html.LabelFor(model => model.IsNegativeMarkingApplicable, new { style = "font-Weight:Bold;" })
                        @*<span style="color: red; float: left; padding-left: 1px; font-weight: bold">&nbsp;</span>
                        @Html.LabelFor(model => model.TotalPaperSet, new { style = "font-Weight:Bold;" })*@
                        &nbsp;
                    </div>
                    <div class="span2" style="line-height: 25px">
                        @Html.CheckBoxFor(model => model.IsNegativeMarkingApplicable, new { @class = "txtbox", maxlength = "30", style = "font-Weight:Bold;" })
                        @*@Html.TextBoxFor(model => model.TotalPaperSet, new { @class = "txtbox", maxlength = "30", style = "font-Weight:Bold;" })
                        <br />
                        @Html.ValidationMessageFor(m => m.TotalPaperSet)*@
                        &nbsp;
                    </div>
                </div>
                <div class="row control-group">
                    <div id="divNegativeMarksPerQue">
                        <div class="span2">
                            @Html.LabelFor(model => model.NegativeMarksInEachQuestion, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2" style="line-height: 25px">
                            @Html.TextBoxFor(model => model.NegativeMarksInEachQuestion, new { maxlength = "30", style = "font-Weight:Bold;" })
                        </div>
                    </div>
                        @*<div id="divNegativeMarksPerQue">
                            <div class="span2" style="margin-left: 10%">
                                <span style="color: red; float: left; padding-left: 1px; font-weight: bold">&nbsp;</span>
                                @Html.LabelFor(model => model.NegativeMarksInEachQuestion, new { style = "font-Weight:Bold;" })
                            </div>
                            <div class="span2" style="line-height: 25px">
                                @Html.TextBoxFor(model => model.NegativeMarksInEachQuestion, new { maxlength = "30", style = "font-Weight:Bold;" })
                            </div>
                        </div>*@
                    </div>
                <hr />
                <div> <h6>Exam Details </h6></div><br />
                <div id="DisplayMessage" style="display:none;color:#000;" class="alert"></div>
                <div class="row">
                    <div class="span9">
                        <div class="row control-group">
                            <div class="span">
                                @Html.LabelFor(model => model.QuestionType, new { Style = "font-size: 100%;font-weight:bold;" })
                                @Html.DropDownListFor(model => model.QuestionType, Model.QuestionTypeListMasterItem, new { style = "font-weight:bold" })
                            </div>
                            <div class="spanFullName">
                                @Html.HiddenFor(m => m.SubjectID)
                                @Html.LabelFor(model => model.SubjectName, new { Style = "font-size: 100%;font-weight:bold ;" })
                                @Html.TextBoxFor(model => model.SubjectName, new { style = "width:210px;text-align:left;font-weight:bold", disabled = "disabled" })
                            </div>
                            <div class="spanFullName">
                                @Html.LabelFor(model => model.TotalQuestionQueTypeWise, new { Style = "font-size: 100%;font-weight:bold;" })
                                @Html.TextBoxFor(model => model.TotalQuestionQueTypeWise, new { minlength = "1", Style = "width:60px;text-align:right;font-weight:bold" })
                            </div>
                            <div class="spanFullName">
                                <label for="input01">&nbsp;</label>
                                <input type="button" id="addItem" class="btn btn-primary" style="height:28px" value="Add" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="span9">
                        <table id="tblData" class="table user-tbl " style="  border: 1px solid #dddddd">
                            <thead>
                                <tr>
                                    <th style="text-align: left; width: 30%">Type</th>
                                    <th style="text-align: left; width: 30%">Subject</th>
                                    <th style="text-align: left; width: 13%">Total Question</th>
                                    <th style="text-align: center; width: 5px;">Action</th>
                                </tr>
                            </thead>
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                    <input id="CreateOnlineExaminationMasterRecord" type="button" value="@Resources.ButtonAction_Submit" class="btn btn-primary" style="width: 60px;" />
                </div>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        OnlineExaminationMaster.Initialize();
        OnlineExaminationMaster.CheckQuestionTypeOnLoad();
    });
</script>




