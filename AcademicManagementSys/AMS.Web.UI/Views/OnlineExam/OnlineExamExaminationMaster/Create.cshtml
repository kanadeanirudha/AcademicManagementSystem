@model AMS.ViewModel.OnlineExamExaminationMasterViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Create Online Exam</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateOnlineExamExaminationMaster" role="form" class="row">
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.ExaminationName, new { })
                        @Html.TextBoxFor(model => model.ExaminationName, new { maxlength = "200", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.ExaminationName)
                </div>
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.Purpose, new { })
                        @Html.TextBoxFor(model => model.Purpose, new { maxlength = "30", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.Purpose)
                </div>
               
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line select" >
                        <span style="color:red">*</span> @Html.LabelFor(model => model.AcadSessionId, new { })
                        @Html.DropDownListFor(model => model.AcadSessionId, (SelectList)ViewBag.GeneralSessionMasterListt, "---Select Academic Session---", new { @class = "form-control input-sm" })

                    </div>
                    @Html.ValidationMessageFor(model => model.AcadSessionId)
                </div>
                   
                <div class="form-group col-sm-6">
                    <div class="form-group fg-line select" >
                        <span style="color:red">*</span> @Html.LabelFor(model => model.ExaminationFor, new { })
                       @Html.DropDownList("ExaminationFor", ViewData["ExaminationFor"] as List<SelectListItem>, "---Select Examination For ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "ExaminationFor*" })

                    </div>
                    @Html.ValidationMessageFor(model => model.ExaminationFor)
                </div>


                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateOnlineExamExaminationMasterRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        OnlineExamExaminationMaster.Initialize();
    });
</script>

