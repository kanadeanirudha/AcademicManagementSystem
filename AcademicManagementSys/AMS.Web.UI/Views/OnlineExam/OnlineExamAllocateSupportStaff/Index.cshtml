@model AMS.ViewModel.OnlineExamAllocateSupportStaffViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}


<style type="text/css">
    .mfp-content {
        width: 50%;
    }
</style>
<script src="@Url.Content("~/Scripts/AMS_Scripts/OnlineExam/OnlineExamAllocateSupportStaff.js")" type="text/javascript"></script>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Support Staff</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-body card-padding">
            <form class="row" role="form">
                @Html.HiddenFor(m => m.SessionID)
                <div class="col-sm-5">
                    @*@Resources.TableHeaders_CentreName*@
                    <div class="form-group fg-line select">
                        @Html.DropDownListFor(model => model.SelectedCentreCode, (SelectList)ViewBag.listAdminRoleApplicableDetails, "---Select Centre ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre Name*" })
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="select form-group fg-line">
                        @*@Html.LabelFor(model => model.SelectedExam, new { })*@
                        @Html.DropDownListFor(model => model.SelectedExam, Enumerable.Empty<SelectListItem>(), "---Select Exam ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Examination Name*" })
                    </div>
                </div>
                <div class="col-sm-2">
                    <button type="button" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>

                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        OnlineExamAllocateSupportStaff.Initialize();
    });
</script>
