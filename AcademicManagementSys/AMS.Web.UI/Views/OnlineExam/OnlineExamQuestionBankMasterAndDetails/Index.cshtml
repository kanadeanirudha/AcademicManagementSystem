
@model AMS.ViewModel.OnlineExamQuestionBankMasterAndDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}


<style type="text/css">
    .mfp-content {
        width: 70%;
    }
</style>
<script src="@Url.Content("~/Scripts/AMS_Scripts/OnlineExam/OnlineExamQuestionBankMasterAndDetails.js")" type="text/javascript"></script>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Manage Question Bank</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
      <div class="card-header">
        <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown" title="Add New">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li>
                            @*<a class="mfpAjaxModal" href="@Url.Action("Create", "OnlineExamQuestionBankMasterAndDetails")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>*@
                            <a class="mfpAjaxModal" href="@Url.Action("CreateQuestionBank", "OnlineExamQuestionBankMasterAndDetails")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; @Resources.DisplayName_AddNew
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
    </div>
        <div class="card-body card-padding">
            <form class="row" role="form">
                <div class="col-sm-8">
                  
                    <div class="form-group fg-line select">
                        @Html.DropDownListFor(model => model.OnlineExamQuestionBankMasterID, (SelectList)ViewBag.QuestionBankMasterList, "---Select Question Bank ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "" })
                    </div>
                </div>
                <div class="col-sm-1">
                    <button type="button" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>

                </div>
                 <div class="col-sm-3">
                       <a href="@Url.Action("Create", "OnlineExamQuestionBankMasterAndDetails")" style="display:none;" class="mfpAjaxModal" id="btnCreateList"><span class="btn btn-primary">Create&nbsp&nbspQuestion</span></a>
              </div>
            </form>
        </div>
        
    </div>

    <div id="ListViewModel" > </div>
</div>
  
    <script type="text/javascript">
        $(document).ready(function () {
            OnlineExamQuestionBankMasterAndDetails.Initialize();
        });
    </script>

































