@model AMS.ViewModel.OnlineExamExaminationQuePaperDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}

<script src="@Url.Content("~/Scripts/AMS_Scripts/OnlineExam/OnlineExamExaminationQuePaperDetails.js")" type="text/javascript"></script>

<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Add Question for Examination</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header">
            <ul class="actions">
                <li class="dropdown">
                    <a href="@Url.Action("Index", "OnlineExamExaminationQuePaperDetails")">
                        <i class="zmdi zmdi-long-arrow-return"></i>
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body card-padding">
            <form class="row" role="form">
                <div class="col-sm-6">
                    Select Question Bank
                    <div class="select form-group fg-line">
                        @Html.HiddenFor(m => m.OnlineExamExaminationQuestionPaperID)
                        @Html.HiddenFor(m => m.OnlineExamSubjectGroupScheduleID)
                        @Html.DropDownListFor(model => model.OnlineExamQuestionBankMasterID, (SelectList)ViewBag.QuestionBankMasterList, "---Select Question Bank ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "" })
                    </div>
                </div>
                
                <div class="col-sm-2">
                    <button type="button" style="margin-top:22px" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>

                </div>
            </form>
        </div>
    </div>

    <div id="ListViewModel"> </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        OnlineExamExaminationQuePaperDetails.Initialize();
    });
</script>




