@model AMS.ViewModel.GeneralQuestionLevelMasterViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;Create Question Level</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateGeneralQuestionLevelMaster" role="form" class="row">
                <div class="form-group col-sm-12">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.LevelDescription, new { })
                        @Html.TextBoxFor(model => model.LevelDescription, new { maxlength = "30", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.LevelDescription)
                </div>
                <div class="form-group col-sm-12">
                    <div class="form-group fg-line">
                        <span style="color:red">*</span> @Html.LabelFor(model => model.LevelCode, new { })
                        @Html.TextBoxFor(model => model.LevelCode, new { maxlength = "20", @class = "form-control input-sm " })

                    </div>
                    @Html.ValidationMessageFor(model => model.LevelCode)
                </div>
                @*<div class="col-sm-6">
                    <div class="form-group fg-line">
                        <label style="margin-top: 2%; margin-bottom: 3%;">
                            @Html.LabelFor(model => model.IsActive, new { style = "padding-left: 0px; margin-top:2%;" })

                        </label>
                    </div>*@
                    @*<div class="checkbox col-sm-6">
                        <input type="checkbox" value="" id="IsActive">
                        <i class="input-helper"></i>
                    </div>
                </div>*@

                <div class="form-group col-sm-12">
                    <input class="btn btn-primary" style="margin-left:1%" value="@Resources.ButtonAction_Submit" id="CreateGeneralQuestionLevelMasterRecord" type="button" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralQuestionLevelMaster.Initialize();
    });
</script>

