@model AMS.ViewModel.OrganisationSectionDetailsViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div id="update-message" class="error invisible"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5>@Resources.FormCreate_AddSection</h5>
    </div>
    <div class="widget-box">
        <form id="FormCreateOrganisationSectionDetailsAdd" method="post" class="form-horizontal well">
            <fieldset>
                <legend style="display: none;"></legend>
                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.StreamID)
                @Html.HiddenFor(model => model.BranchID)
                @Html.HiddenFor(model => model.BranchDetID)
                @Html.HiddenFor(model => model.StandardID)
                @Html.HiddenFor(model => model.MediumID)
                @Html.HiddenFor(model => model.Duration)
                @Html.HiddenFor(model => model.UniversityID)
                @Html.HiddenFor(model => model.CentreCode)
                @Html.HiddenFor(model => model.ExamApplicable)
                @Html.HiddenFor(model => model.ExamPattern)
                @Html.HiddenFor(model => model.DegreeName)
                @Html.HiddenFor(model => model.CourseYearDetailID)
                @Html.HiddenFor(model => model.NumberOfSemester)

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="nonboxy-widget">

                    <div class="row">
                        <div class="span9">
                            <h5>@Html.DisplayFor(model => model.Descriptions)</h5>
                            <br />
                        </div>
                    </div>

                    <div class="row control-group">
                        <div class="span2">
                            @*<label for="input01" class="control-label">Section Name :</label>*@
                            @Html.LabelFor(m => m.SelectedDescriptions, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @* @Html.DisplayFor(model => model.Descriptions)*@
                            @Html.DropDownListFor(model => model.SelectedDescriptions, (SelectList)ViewBag.organisationSectionMaster, new { @class = "dropdown1", style = "width:180px;" })
                            <br />
                            @Html.ValidationMessageFor(model => model.SelectedDescriptions)

                        </div>
                        <div class="span2">
                            @*<label for="input01" class="control-label">Stream Descriptions :</label>*@
                            @Html.LabelFor(m => m.StreamDescriptions, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.StreamDescriptions)

                        </div>
                    </div>

                    <div class="row control-group">
                        <div class="span2">
                            @*<label for="input01" class="control-label">Section Code :</label>*@
                            @Html.LabelFor(m => m.SectionDetailCode, new { @class = "control-label" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.SectionDetailCode, new { maxlength = 20, style = "width:168px;" })

                        </div>
                        <div class="span2">
                            @*<label for="input01" class="control-label">Standard Descriptions :</label>*@
                            @Html.LabelFor(m => m.StandardDescriptions, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.StandardDescriptions)
                        </div>
                    </div>

                    <div class="row control-group">
                        <div class="span2">
                            @*<label for="input01" class="control-label">Section Capacity :</label>*@
                            @Html.LabelFor(m => m.SectionCapacity, new { @class = "control-label" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.SectionCapacity, new { @class = "numeric", style = "width:162px;", min = 0, maxlength = 4, type = "number", })
                            <br />
                            @Html.ValidationMessageFor(model => model.SectionCapacity)
                        </div>
                        <div class="span2">
                            @*<label for="input01" class="control-label">Medium :</label>*@
                            @Html.LabelFor(m => m.MediumDescription, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.MediumDescription)
                        </div>
                    </div>

                    <div class="row control-group">
                        <div class="span2">
                            @*<label for="input01" class="control-label">Branch Description :</label>*@
                            @Html.LabelFor(m => m.BranchDescriptions, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.BranchDescriptions)
                        </div>
                        <div class="span2">
                            @*<label for="input01" class="control-label">Exam applicable :</label>*@
                            @Html.LabelFor(m => m.ExamApplicable, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.ExamApplicable)
                        </div>
                    </div>

                    <div class="row control-group">
                        <div class="span2">
                            @*<label for="input01" class="control-label">Exam Pattern :</label>*@
                            @Html.LabelFor(m => m.ExamPattern, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.ExamPattern)
                        </div>
                        <div class="span2">
                            @*<label for="input01" class="control-label">Degree  :</label>*@
                            @Html.LabelFor(m => m.DegreeName, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.DisplayFor(model => model.DegreeName)
                        </div>
                    </div>
                    <div class="row control-group">
                        <div class="span2">
                            @*<label for="input01" class="control-label">Shift  :</label>*@
                            @Html.LabelFor(m => m.OrgShiftCode, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">

                            @Html.TextBoxFor(model => model.OrgShiftCode, new { maxlength = 20, style = "width:168px;" })

                        </div>
                        <div class="span2">
                            @*<label for="input01" class="control-label">Is Active ?</label>*@
                            @Html.LabelFor(m => m.SectionActive, new { @class = "control-label" })
                        </div>
                        <div class="span2" style="font-weight: bold;">
                            @Html.CheckBoxFor(model => model.SectionActive)
                        </div>
                    </div>
                    <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">
                        <input type="button" id="CreateOrganisationSectionDetailsAddRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />


                    </div>


                </div>
            </fieldset>
        </form>
    </div>

</div>

<script type="text/javascript">
    $(document).ready(function () {
        OrganisationSectionDetailsAdd.Initialize();


    });


</script>


