@model AMS.ViewModel.ScholarShipAllocationViewModel
@Html.HiddenFor(m => m.SelectedCentreCode)
@Html.HiddenFor(m => m.StudentID)
@Html.HiddenFor(m => m.StudentAmissionDetailID)
@Html.HiddenFor(m => m.SectionDetailId)
@Html.HiddenFor(m => m.StandarNumber)
@Html.HiddenFor(m => m.LastSectionDetailID)
<form id="FormCreateScholarShipAllocation" role="form">
    <div id="custom-content">
        <div class="block-header">
            <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Allocate ScholarShip</h2>
        </div>
        <div class="card">
            <div class="card-body card-padding" style="padding-bottom: 10% !important;">
                <div id="displayErrorMessage" role="alert" hidden class="alert">
                    <button class="close" type="button"><span aria-hidden="true">×</span></button>
                    <p id="messageContent"></p>
                </div>

                <div class="col-sm-6">
                    <div class="form-group select fg-line">
                        @Html.LabelFor(model => model.BranchID, new { })
                        @Html.DropDownListFor(m => m.BranchID, Model.CourseListItems, "---------Select Course-----------", new { maxlength = "30", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.BranchID)
                </div>

                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.StudentName, new { })
                        @Html.TextBoxFor(m => m.StudentName, new { maxlength = "60", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentName)
                </div>

            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <div class="media">
                    <div class="pull-left">
                        <img id="imgStuPhoto" alt="" src="~/Content/materialtheme/img/login.png" class="lv-img">
                    </div>

                    <div class="media-body m-t-5">
                        <h2 id="stuName">Student Name<small id="stuEmailID">Email-Id</small></h2>
                    </div>
                </div>
            </div>

            <div class="row">


                <div class="col-sm-6 m-b-20">


                    <ul class="list-group">
                        <li class="list-group-item">
                            <span class="badge" id="stuAcadYear"></span>
                            Academic Year
                        </li>
                        <li class="list-group-item">
                            <span class="badge" id="stuCourse"></span>
                            Course
                        </li>
                        <li class="list-group-item">
                            <span class="badge" id="stuSection"></span>
                            Section
                        </li>
                        <li class="list-group-item">
                            <span class="badge" id="stuAdmissionPattern"></span>
                            Admission Pattern
                        </li>
                    </ul>
                </div>

                <div class="col-sm-6 m-b-20">


                    <ul class="list-group">
                        <li class="list-group-item">
                            <span class="badge" id="stuEnrollNumber"></span>
                            Enrollment Number
                        </li>
                        <li class="list-group-item">
                            <span class="badge" id="stuStdNumber"></span>
                            Standard Number
                        </li>
                        <li class="list-group-item">
                            <span class="badge" id="stuAdmitAcadYear"></span>
                            Admit Academic Year
                        </li>
                        <li class="list-group-item">
                            <span class="badge" id="stuGender"></span>
                            Gender
                        </li>

                    </ul>
                </div>


            </div>


        </div>
        <div class="card">
            <div class="card-body card-padding">
                <div class="col-sm-6">
                    <div class="form-group select fg-line">
                        @Html.LabelFor(model => model.ScholarShipMasterID, new { })
                        @Html.DropDownListFor(m => m.ScholarShipMasterID, Model.ScholarShipListItems, "---------Select ScholarShip-----------", new { maxlength = "30", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ScholarShipMasterID)
                </div>

                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.ScholarSheepDocumentNumber, new { })
                        @Html.TextBoxFor(m => m.ScholarSheepDocumentNumber, new { maxlength = "20", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.ScholarSheepDocumentNumber)
                </div>
                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateScholarShipAllocationRecord" type="button" />
                </div>

            </div>
        </div>
    </div>
</form>
<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        ScholarShipAllocation.Initialize();
        ScholarShipAllocation.CommonMethodsForScholarShipAllocation();
    });
</script>
