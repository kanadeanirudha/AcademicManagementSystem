<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Update Organisation Director</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditOrganisationDirectorMaster">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

                @Html.HiddenFor(model => model.ID)
                @Html.HiddenFor(model => model.CentreCode)
                @Html.HiddenFor(model => model.PersonID)
                @Html.HiddenFor(model => model.PersonType)
                @Html.HiddenFor(model => model.FirstName)
                @Html.HiddenFor(model => model.MiddleName)
                @Html.HiddenFor(model => model.LastName)
                @Html.HiddenFor(Model => Model.OrganisationMembersMasterID)




                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <div class="form-group  fg-line">
                            <b>@Html.DisplayFor(model => model.CentreName, new { style = "font-weight: bold;" })</b>
                        </div>
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.FirstName, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", id = "DirectorName", maxlength = "50", style = "background-color:#fff;", @readonly = "readonly" })
                        </div>
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.Designation, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownListFor(m => m.DesignationID, (SelectList)ViewBag.GeneralDesignationList, "---Select Designation---", new { id = "Designation", style = "background-color:#fff;", disabled = "disabled" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Designation)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.JoiningDate, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.JoiningDate, new { style = "background-color:#fff;", @readonly = "readonly" })
                        </div>
                        @Html.ValidationMessageFor(model => model.JoiningDate)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.PrintingSeqOrder, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.PrintingSeqOrder, new { @class = "form-control", style = "background-color:#fff;", @readonly = "readonly" })
                        </div>
                        @Html.ValidationMessageFor(model => model.PrintingSeqOrder)
                    </div>
                </div>

                <div class="col-sm-12">

                    <div class="col-sm-6">
                        <div class="checkbox m-b-15" style="padding-top:8%;">
                            <label>
                                <input type="checkbox" id="IsCurrentDirector" disabled>
                                <i class="input-helper"></i>
                                @Html.LabelFor(model => model.IsCurrentDirector)
                            </label>
                            @Html.ValidationMessageFor(model => model.IsCurrentDirector)
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <div class="checkbox m-b-15" style="padding-top:8%;">
                            <label>
                                <input type="checkbox" id="IsLifeTimeDirector" disabled>
                                <i class="input-helper"></i>
                                @Html.LabelFor(model => model.IsLifeTimeDirector)
                            </label>
                            @Html.ValidationMessageFor(model => model.IsLifeTimeDirector)
                        </div>
                    </div>

                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.LeavingDate, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.LeavingDate, new { @class = "form-control", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.LeavingDate)
                    </div>
                </div>

                
                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="EditOrganisationDirectorMasterRecord" type="button" />
                </div>
            </form>

        </div>
    </div>
</div>
