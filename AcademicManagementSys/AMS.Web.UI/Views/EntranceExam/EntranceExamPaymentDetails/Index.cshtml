@model AMS.ViewModel.EntranceExamPaymentDetailsViewModel

@Styles.Render("~/Content/Vendors")
<script src="@Url.Content("~/Scripts/AMS_Scripts/EntranceExam/EntranceExamPaymentDetails.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />

<style>
    .widget-block {
        height: 440px;
    }

    .submit {
        margin-right: 150px;
        margin-bottom: 5px;
        width: 120px;
        height: 60px;        
        text-align: right;        
        float: right;
    }
</style>


<div class="container-fluid">

    <ul class="breadcrumb">
        <li>@Resources.MainMenu_GeneralParameters<span class="divider">»</span></li>
        <li class="active">Exam Online Payment</li>
    </ul>

    <div id="SuccessMessage" style="display:none;color:#000;" class="alert"></div>
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-block">

                <div class="widget-head">
                    <h5 id="hFive"><i class="black-icons users"></i> &nbsp;Exam Online Payment</h5>
                </div>

                <div class="widget-content">
                    <div class="widget-box">
                        <div class="control-group">                         

                            <div class="row">
                                <div class="span1">
                                    <label class="control-label">&nbsp;</label>
                                </div>
                                <div class="span9">
                                    <div class="row control-group">
                                        <label class="control-label">&nbsp;</label>
                                        <div class="span2">
                                            @Html.LabelFor(model => model.StudentName, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span3">
                                            @Html.DisplayFor(m => m.StudentName, new { @class = "control-label", style = "font-weight:bold" })
                                            <br />
                                        </div>
                                        <div class="span2">
                                            @Html.LabelFor(model => model.PaymentAmount, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span2">
                                            @Html.DisplayFor(m => m.PaymentAmount, new { @class = "control-label", style = "font-weight:bold" })
                                            <br />
                                        </div>
                                    </div>
                                </div>
                            </div>


                            <div class="row">
                                <div class="span1">
                                    <label class="control-label">&nbsp;</label>
                                </div>
                                <div class="span9">
                                    <div class="row control-group">
                                        <label class="control-label">&nbsp;</label>
                                        <div class="span2">
                                            @Html.LabelFor(model => model.PaymentMode, new { style = "font-Weight:Bold;" })
                                        </div>

                                        <div class="span3" style="font-weight:bold;">
                                            @Html.RadioButtonFor(model => model.PaymentMode, "Online")&nbsp;&nbsp;&nbsp; Online &nbsp;&nbsp;&nbsp;&nbsp;
                                            @Html.RadioButtonFor(model => model.PaymentMode, "Offline")&nbsp;&nbsp;&nbsp; Offline &nbsp;&nbsp;&nbsp;&nbsp;
                                           
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div id="onlinePayment">
                                @using (Html.BeginForm("SavePaymentDetails", "EntranceExamPaymentDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    @Html.HiddenFor(model => model.EntranceExamValidationParameterApplicableID)
                                    @Html.HiddenFor(model => model.EntranceExamPaymenDetailsID)
                                    @Html.HiddenFor(model => model.Status)
                                    @Html.HiddenFor(model => model.StudentRegistrationID)
                                    @Html.HiddenFor(model => model.StudentName)
                                    @Html.HiddenFor(model => model.PaymentAmount)
                                    @Html.HiddenFor(model => model.PaymentModeValue)


                                    <div class="row">
                                        <div class="span1">
                                            <label class="control-label">&nbsp;</label>
                                        </div>
                                        <div class="span9">
                                            <div class="row control-group">
                                                <label class="control-label">&nbsp;</label>
                                                <div class="span2">
                                                    @Html.LabelFor(model => model.PaymentThrough, new { style = "font-Weight:Bold;" })
                                                </div>

                                                <div class="span5" style="font-weight:bold;">
                                                    @Html.RadioButtonFor(model => model.PaymentThrough, "1")&nbsp;&nbsp;&nbsp; Net Banking &nbsp;&nbsp;&nbsp;&nbsp;
                                                    @Html.RadioButtonFor(model => model.PaymentThrough, "2")&nbsp;&nbsp;&nbsp;Credit Card &nbsp;&nbsp;&nbsp;&nbsp;
                                                    @Html.RadioButtonFor(model => model.PaymentThrough, "3")&nbsp;&nbsp;&nbsp;Debit Card &nbsp;&nbsp;&nbsp;&nbsp;
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="span1">
                                            <label class="control-label">&nbsp;</label>
                                        </div>

                                        <div class="submit">
                                            <input type="submit" value="Pay Now" class="btn btn-primary" style="width:100%;" />
                                        </div>

                                    </div>

                                }
                            </div>

                            <div id="offlinePayment">
                                @using (Html.BeginForm("SavePaymentDetails", "EntranceExamPaymentDetails", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {

                                    @Html.HiddenFor(model => model.EntranceExamValidationParameterApplicableID)
                                    @Html.HiddenFor(model => model.EntranceExamPaymenDetailsID)
                                    @Html.HiddenFor(model => model.Status)
                                    @Html.HiddenFor(model => model.StudentRegistrationID)
                                    @Html.HiddenFor(model => model.StudentName)
                                    @Html.HiddenFor(model => model.PaymentAmount)
                                    @Html.HiddenFor(model => model.PaymentModeValue)

                                    <div class="row">
                                        <div class="span1">
                                            <label class="control-label">&nbsp;</label>
                                        </div>
                                        <div class="span9">
                                            <div class="row control-group">
                                                <label class="control-label">&nbsp;</label>
                                                <div class="span2">
                                                    @Html.LabelFor(model => model.ChalanNo, new { style = "font-Weight:Bold;" })
                                                </div>
                                                <div class="span3">
                                                    @Html.TextBoxFor(m => m.ChalanNo, new { @class = "control-label", style = "font-weight:bold" })
                                                    <br />
                                                    @Html.ValidationMessageFor(model => model.ChalanNo)
                                                </div>
                                                <div class="span2">
                                                    @Html.LabelFor(model => model.ChalanDate, new { style = "font-Weight:Bold;" })
                                                </div>
                                                <div class="span2">
                                                    @Html.TextBoxFor(m => m.ChalanDate, new { @class = "control-label", style = "font-weight:bold" })
                                                    <br />
                                                    @Html.ValidationMessageFor(model => model.ChalanDate)
                                                </div>
                                            </div>
                                        </div>
                                    </div>


                                    <div class="row">
                                        <div class="span1">
                                            <label class="control-label">&nbsp;</label>
                                        </div>
                                        <div class="span9">
                                            <div class="row control-group">
                                                <label class="control-label">&nbsp;</label>
                                                <div class="span2">
                                                    @Html.LabelFor(model => model.BankName, new { style = "font-Weight:Bold;" })
                                                </div>
                                                <div class="span3">
                                                    @Html.TextBoxFor(m => m.BankName, new { @class = "control-label", style = "font-weight:bold" })
                                                    <br />
                                                    @Html.ValidationMessageFor(model => model.BankName)
                                                </div>
                                                <div class="span2">
                                                    @Html.LabelFor(model => model.BankAddress, new { style = "font-Weight:Bold;" })
                                                </div>
                                                <div class="span2">
                                                    @Html.TextBoxFor(m => m.BankAddress, new { @class = "control-label", style = "font-weight:bold" })
                                                    <br />
                                                    @Html.ValidationMessageFor(model => model.BankAddress)
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="span1">
                                            <label class="control-label">&nbsp;</label>
                                        </div>
                                        <div class="span9">
                                            <div class="row control-group">
                                                <label class="control-label">&nbsp;</label>
                                                <div class="span2">
                                                    @Html.LabelFor(model => model.AttachFile, new { style = "font-Weight:Bold;" })
                                                </div>
                                                <div class="span3" id="PaymentAttachedFile">                                                   
                                                    @Html.FileFor(model => model.AttachPaymentDetailFile)
                                                    <br />
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="span1">
                                            <label class="control-label">&nbsp;</label>
                                        </div>

                                        <div class="submit">
                                            <input type="submit" value="Pay Now" class="btn btn-primary" style="width:100%;" />
                                        </div>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        EntranceExamPaymentDetails.Initialize();
    });
</script>
