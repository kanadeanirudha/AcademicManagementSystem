@model AMS.ViewModel.EntranceExamInfrastructureDetailViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />

<style>
    .ui-front {
        /*z-index:10000;*/
        z-index: 10000;
    }

    hr {
        display: block;
        margin-top: 0.5em;
        margin-bottom: 0.5em;
        margin-left: auto;
        margin-right: auto;
        border-style: inset;
        border-width: 1px;
    }

    input[placeholder] {
        font-weight: 600;
    }
</style>



<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive"> @Resources.FormName_CreateEntranceExamAvailableCentres</h5>
    </div>
    <div class="widget-box">
        <div id="DivSuccessMessage" style="display: none; color: #000; margin-bottom: 0px;" class="alert"></div>
        <form id="FormCreateEntranceExamAvailableCentres" method="post" class="form-horizontal well">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.EntranceExamInfrastructureDetailID)
            @Html.HiddenFor(model => model.GenLocationID)


            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.CentreName, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @* @Html.DropDownListFor(m => m.SessionName, (SelectList)ViewBag.GenSessionMaster,"Select Session master", new { style = "font-Weight:Bold;" })*@
                            @Html.TextBoxFor(model => model.CentreName, new { maxlength = "100", style = "font-Weight:Bold;" })
                            <br />
                            @Html.ValidationMessageFor(model => model.CentreName)
                        </div>
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.LocationAddress, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.LocationAddress, new { style = "font-Weight:Bold;" })
                            <br />
                            @Html.ValidationMessageFor(model => model.LocationAddress)

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>

                            @Html.LabelFor(model => model.Address, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextAreaFor(model => model.Address, new { maxlength = "200", style = "font-Weight:Bold;" })
                            <br />
                            @Html.ValidationMessageFor(model => model.Address)
                        </div>
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                           
                            @Html.LabelFor(model => model.ActiveFrom, new { @class = "", style = "font-Weight:Bold;" })
                            <br />
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            
                            @Html.LabelFor(model => model.ActiveUpto, new { @class = "", style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                           
                            @Html.TextBoxFor(model => model.ActiveFrom, new { @class = "txtbox", ReadOnly = "True" })
                            <br />
                            @Html.ValidationMessageFor(model => model.ActiveFrom)


                            <br />
                            @Html.TextBoxFor(model => model.ActiveUpto, new { @class = "txtbox", ReadOnly = "True" })
                            <br />
                            @Html.ValidationMessageFor(model => model.ActiveUpto)


                        </div>
                    </div>
                </div>
            </div>
         

            <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                <button type="button" id="CreateEntranceExamAvailableCentresRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>

            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EntranceExamInfrastructureDetail.Initialize();
    });

</script>
<style>
    .span {
        width: 25px;
        margin-top: 1%;
        margin-left: 60px;
    }

    .spana {
        width: 100px;
    }

    .span1 {
        width: 135px;
    }

    .span2 {
        width: 200px;
    }

    .hide_column {
        display: none;
    }

    .paging_full_numbers {
        display: none;
    }

    div.dataTables_paginate {
        display: none;
    }

    .dataTables_paginate {
        display: none;
    }

    div.dataTables_info {
        display: none;
    }

    .dataTables_info {
        display: none;
    }
</style>
