@model AMS.ViewModel.EntranceExamValidationParameterViewModel
@{
    Layout = null;
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive">Entrance Exam Validation Parameter</h5>
    </div>
    <div class="widget-box">

        <form id="FormCreateEntranceExamValidationParameter" method="post" class="form-horizontal well">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.FeeCriteriaValueCombinationMasterID)


            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.FeeCriteriaValueCombinationDescription, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                          <b> @Html.DisplayFor(Model => Model.FeeCriteriaValueCombinationDescription, new { style = "font-Weight:Bold;" })</b>
                            
                        </div>
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.PreQualificationCutOff, new { style = "font-Weight:Bold;width:190px" })
                        </div>
                        <div class="span2">
                            @*@Html.TextBoxFor(model => model.PreQualificationCutOff, new { @class = "", style = "font-Weight:Bold;" })*@
                            @Html.TextBoxFor(model => model.PreQualificationCutOff, new { @class = "txtbox", Value="",Maxlength="8", style = "text-align:right;font-weight:bold;width:150px" })
                            <br />
                            @Html.ValidationMessageFor(model => model.PreQualificationCutOff)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.EntranceExamFeeAmount, new { style = "font-Weight:Bold;width:185px" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.EntranceExamFeeAmount, new { @class = "txtbox",Value="",Maxlength="11", style = "text-align:right;font-weight:bold;width:150px" })
                            <br />
                            @Html.ValidationMessageFor(model => model.EntranceExamFeeAmount)
                        </div>
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.EntranceExamCutOff, new { style = "font-Weight:Bold;width:185px" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.EntranceExamCutOff, new { @class = "txtbox",Value="",Maxlength="8", style = "text-align:right;font-weight:bold;width:150px" })
                            <br />
                            @Html.ValidationMessageFor(model => model.EntranceExamCutOff)
                        </div>
                    </div>
                </div>
            </div>


            <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                <button type="button" id="CreateEntranceExamValidationParameterRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>

            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EntranceExamValidationParameter.Initialize();
    });

</script>
