@model AMS.ViewModel.EntranceExamScheduleAndScheduleDetailViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>


<style>
    .spanFullName {
        width: 15%;
    }

    .spanlabel {
        width: 15%;
    }

    .hrStyle {
        margin-top: 0%;
    }

    .txtbox {
        font-weight: bold;
        width: 100%;
    }
    .abc1{

    }

</style>

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div id="SuccessMessages" style="display:none;color:#000;" class="alert"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5>Add Exam Schedule</h5>
    </div>
    <div class="widget-box">
        <form id="FormCreateEntranceExamScheduleAndScheduleDetail" method="post" class="form-horizontal well">
            @Html.HiddenFor(model => model.OnlineExamExaminationMasterID)
            @Html.HiddenFor(model => model.EntranceExamCenteApllicableToExamID)
            @Html.HiddenFor(model => model.EntranceExamInfrastructureDetailID)

            <div class="nonboxy-widget">
                <div class="row">
                    <div class="span10">

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                        @Html.LabelFor(model => model.ScheduleName, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.ScheduleName, new { maxlength = "100", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.ScheduleName)
                                    </div>
                                    <div class="spanFullName">
                                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                        @Html.LabelFor(model => model.ScheduleDate, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span2">
                                        @Html.TextBoxFor(model => model.ScheduleDate, new { style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.ScheduleDate)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                        @Html.LabelFor(model => model.ScheduleTimeStart, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.ScheduleTimeStart, new { maxlength = "100", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.ScheduleTimeStart)
                                    </div>
                                    <div class="spanFullName">
                                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                        @Html.LabelFor(model => model.ScheduleEndTime, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.ScheduleEndTime, new { maxlength = "30", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.ScheduleEndTime)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                        @Html.LabelFor(model => model.OnlineExamExaminationQuestionPaperID, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.DropDownListFor(model => model.OnlineExamExaminationQuestionPaperID, (SelectList)ViewBag.OnlineExamExaminationQuestionPaperSet, "-----Select paper set------", new { id = "OnlineExamExaminationQuestionPaperID", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.OnlineExamExaminationQuestionPaperID)
                                    </div>
                                    <div class="spanFullName">
                                        <div class="span">&nbsp;</div>
                                    </div>
                                    <div class="span2">
                                        <div class="span">&nbsp;</div>
                                        <br />
                                        
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row control-group">
                            <div id="DataTables_Table_1_wrapper" class="dataTables_wrapper span10" role="grid">
                                <div class="widget-head">
                                    <h5>Student List</h5>
                                </div>
                                <div id="DataTables_table_content" class="table_content">

                                    <table id="myDataTableCreate" class="table table-striped table-bordered user-tbl">
                                        <thead>
                                            <tr class="center">                                               
                                                <th style="font-weight: bold; color: #000"><input id="selectAllStudentID" type="checkbox" /> select All </th>
                                                <th style="font-weight: bold; color: #000">Student name</th>
                                            </tr>
                                        </thead>

                                        @if (ViewBag.ListEntranceExamNotAllotedStuentForScheduleAvailCentre != null)
                                        {
                                            foreach (var item in ViewBag.ListEntranceExamNotAllotedStuentForScheduleAvailCentre)
                                            {
                                                <tbody style="overflow: scroll;">
                                                    <tr>
                                                        <td class="abc" style="text-align: left; font-weight: bold">
                                                            @if (@item.AllotedFlag == true)
                                                            {
                                                                <input id="StudentRegistrationID" class="abc1" type="checkbox" disabled="disabled" checked="checked" value="@item.StudentRegistrationID" />
                                                            }
                                                            else
                                                            {
                                                                <input id="StudentRegistrationID" class="abc1" type="checkbox" value="@item.StudentRegistrationID" />
                                                            }
                                                        </td>
                                                        <td style="text-align: left; font-weight: bold">
                                                            @item.StudentName
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            }
                                        }
                                    </table>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right;">
                            <input id="CreateEntranceExamScheduleAndScheduleDetailRecord" type="button" value="@Resources.ButtonAction_Submit" class="btn btn-primary" style="width: 60px;" />
                            <input name="" id="reset" type="submit" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />
                        </div>

                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function () {
        EntranceExamScheduleAndScheduleDetail.Initialize(); 
        EntranceExamScheduleAndScheduleDetail.TotalStudentApllicable = null;
        EntranceExamScheduleAndScheduleDetail.SelectedUnAllotedStudentXml = null;
    });

</script>
