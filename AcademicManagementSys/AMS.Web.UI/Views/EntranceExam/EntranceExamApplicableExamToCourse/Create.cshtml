@model AMS.ViewModel.EntranceExamApplicableExamToCourseViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />

<style>
    .ui-front {
        /*z-index:10000;*/
        z-index: 10000;
    }

    hr {
        display: block;
        margin-top: 0.5em;
        margin-bottom: 0.5em;
        margin-left: auto;
        margin-right: auto;
        border-style: inset;
        border-width: 1px;
    }

    input[placeholder] {
        font-weight: 600;
    }
</style>
<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive"> @Resources.FormName_CreateEntranceExamApplicableExamToCourse</h5>
    </div>
    <div class="widget-box">
        <div id="DivSuccessMessage" style="display: none; color: #000; margin-bottom: 0px;" class="alert"></div>
        <form id="FormCreateEntranceExamApplicableExamToCourse" method="post" class="form-horizontal well">
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.ID)
            @Html.HiddenFor(model => model.CentreCode)
            @Html.HiddenFor(model => model.OnlineExamExaminationMasterID)
            @Html.HiddenFor(model => model.SessionID)
            @Html.HiddenFor(model => model.CourseYearDetailID)



            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                          
                            @Html.LabelFor(model => model.CourseName, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @*<b>@Html.DisplayFor(model => model.CourseName, new { style = "font-Weight:Bold;" })</b>*@
                            @Html.TextBoxFor(model => model.CourseName, new { style = "font-weight:bold" ,disabled="disabled"})
                          
                        </div>
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.ExaminationName, new { style = "font-Weight:Bold;" })
                           
                        </div>
                        <div class="span2">
                           
                            @Html.TextBoxFor(model => model.ExaminationName, new {style = "font-weight:bold" })
                            <br />
                            @Html.ValidationMessageFor(model => model.ExaminationName)

                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.ExaminationFromDate, new { @class = "", style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.ExaminationFromDate, new { @class = "txtbox", ReadOnly = "True" })
                            <br />
                            @Html.ValidationMessageFor(model => model.ExaminationFromDate)
                        </div>
                        <div class="span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.ExaminationUpToDate, new { @class = "", style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.ExaminationUpToDate, new { @class = "txtbox", ReadOnly = "ReadOnly" })
                            <br />
                            @Html.ValidationMessageFor(model => model.ExaminationUpToDate)
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                <button type="button" id="CreateEntranceExamApplicableExamToCourseRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>

            </div>
        </form>

    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        EntranceExamApplicableExamToCourse.Initialize();
    });

</script>
<style>
    .span {
        width: 25px;
        margin-top: 1%;
        margin-left: 60px;
    }

    .spana {
        width: 100px;
    }

    .span1 {
        width: 135px;
    }

    .span2 {
        width: 190px;
    }

    .hide_column {
        display: none;
    }

    .paging_full_numbers {
        display: none;
    }

    div.dataTables_paginate {
        display: none;
    }

    .dataTables_paginate {
        display: none;
    }

    div.dataTables_info {
        display: none;
    }

    .dataTables_info {
        display: none;
    }
</style>
