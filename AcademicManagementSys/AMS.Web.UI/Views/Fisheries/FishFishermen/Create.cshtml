@model AMS.ViewModel.FishFishermenMasterViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<style>
    .spanFullName {
        width: 18%;
    }

    .spanlabel {
        width: 15%;
    }

    .hrStyle {
        margin-top: 0%;
    }

    .txtbox {
        font-weight: bold;
        width: 100%;
    }
</style>


@Html.AntiForgeryToken()
@Html.ValidationSummary(true)


<div id="SuccessMessages" style="display:none;color:#000;" class="alert"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5>Add Fisher Men</h5>
    </div>
    <div class="widget-box">
        <form id="FormCreateFishFishermenMaster" method="post" class="form-horizontal well">
            @Html.HiddenFor(model => model.CentreCode)
            <div class="nonboxy-widget">
                <div class="row">
                    <div class="span10">
                        <div class="row control-group">
                            <div class="spanlabel">
                                <label for="input01">&nbsp;</label>
                                <label for="input01"><b>Full Name</b></label>
                            </div>
                            <div class="span">
                                @Html.LabelFor(model => model.NameTitleID, new { Style = "font-size: 88%;font-style: italic;" })
                                @Html.DropDownListFor(m => m.NameTitleID, (SelectList)ViewBag.GeneralTitleMasterList, "Select",  new { id = "FishermenNameTitle", style = "font-weight:bold;", @class = "span1" })
                                <br />
                                @Html.ValidationMessageFor(model => model.NameTitleID)
                            </div>

                            <div class="spanFullName" style="margin-left: 2%;">
                                @Html.LabelFor(model => model.FirstName, new { Style = "font-size: 88%;font-style: italic;" })
                                @Html.TextBoxFor(model => model.FirstName, new { id = "EmpFirstName", @class = "txtbox" })
                                <br />
                                @Html.ValidationMessageFor(model => model.FirstName)
                            </div>

                            <div class="spanFullName" style="margin-left: 5%;">
                                @Html.LabelFor(model => model.MiddleName, new { Style = "font-size: 88%;font-style: italic;" })
                                @Html.TextBoxFor(model => model.MiddleName, new { @class = "txtbox" })
                                <br />
                                @Html.ValidationMessageFor(model => model.MiddleName)
                            </div>

                            <div class="spanFullName" style="margin-left: 5%;">
                                @Html.LabelFor(model => model.LastName, new { Style = "font-size: 88%;font-style: italic;" })
                                @Html.TextBoxFor(model => model.LastName, new { @class = "txtbox" })

                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.Gender, new { style = "font-Weight:Bold;" })
                                    </div>
                                    @if (Model.NameTitleID == 1)
                                    {
                                        <div class="span3" style="font-weight:bold;">
                                            @Html.RadioButtonFor(model => model.Gender, true, new { @checked = true, id = "Male" })&nbsp;&nbsp;&nbsp; Male &nbsp;&nbsp;&nbsp;
                                            @Html.RadioButtonFor(model => model.Gender, false, new { id = "Female" })&nbsp;&nbsp;&nbsp;Female
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="span3" style="font-weight:bold;">
                                            @Html.RadioButtonFor(model => model.Gender, false, new { id = "Male" })&nbsp;&nbsp;&nbsp; Male &nbsp;&nbsp;&nbsp;
                                            @Html.RadioButtonFor(model => model.Gender, true, new { @checked = true, id = "Female" })&nbsp;&nbsp;&nbsp;Female
                                        </div>
                                    }

                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.BirthDate, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span2">

                                        @Html.TextBoxFor(model => model.BirthDate, new { style = "font-Weight:Bold;", @placeholder = "Select Date" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.BirthDate)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.EmailID, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.EmailID, new { maxlength = "100", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.EmailID)
                                    </div>
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.MobileNumber, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span2">
                                        @Html.TextBoxFor(model => model.MobileNumber, new { maxlength = "12", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.MobileNumber)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.PanNumber, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.PanNumber, new { maxlength = "20", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.PanNumber)
                                    </div>
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.AdharCardNumber, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span2">
                                        @Html.TextBoxFor(model => model.AdharCardNumber, new { maxlength = "50", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.AdharCardNumber)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.BankName, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.BankName, new { maxlength = "60", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.BankName)
                                    </div>
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.BankNumber, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span2">
                                        @Html.TextBoxFor(model => model.BankNumber, new { maxlength = "50", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.BankNumber)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.JoiningDate, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextBoxFor(model => model.JoiningDate, new { style = "font-Weight:Bold;", @placeholder = "Select Date" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.JoiningDate)
                                    </div>
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.NationalityID, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span">
                                        @Html.DropDownListFor(m => m.NationalityID, (SelectList)ViewBag.GeneralNationalityMasterList, "----Select Nationality----", new { id = "NationalityId", style = "font-weight:bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.NationalityID)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.Address, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.TextAreaFor(model => model.Address, new { maxlength = "200", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.Address)
                                    </div>
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.PostalAddress, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span">
                                        @Html.TextAreaFor(model => model.PostalAddress, new { maxlength = "200", style = "font-Weight:Bold;" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.PostalAddress)
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="span10">
                                <div class="row control-group">
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.IsFederationMember, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span3">
                                        @Html.CheckBoxFor(model => model.IsFederationMember)
                                    </div>

                                    @*@if (Model.IsFederationMember == false)
                                    {*@
                                    <div class="spanFullName">
                                        @Html.LabelFor(model => model.FederationMemberId, new { style = "font-Weight:Bold;" })
                                    </div>
                                    <div class="span">
                                        @Html.TextBoxFor(model => model.FederationMemberId, new { style = "font-Weight:Bold;", Value = "" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.FederationMemberId)
                                    </div>
                                    @*}*@
                                </div>
                            </div>
                        </div>
                        <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right;">
                            <input id="CreateFishFishermenMasterRecord" type="button" value="@Resources.ButtonAction_Submit" class="btn btn-primary" style="width: 60px;" />
                            <input name="" id="reset" type="submit" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        FishFishermenMaster.Initialize();
    });

</script>