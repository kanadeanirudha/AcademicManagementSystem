@model AMS.Web.UI.Models.CategoryMaster.CategoryMaster
@{
    ViewBag.Title = "Create";
}

<div id='dlgLogin'>
    <div class="col-md-10">
        <div class="row">
            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Category Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        @using (Html.BeginForm())
                        {
                            @Html.ValidationSummary(true)
                            <fieldset>
                                <legend>Create</legend>
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.CategoryName)
                                </div>
                                <div class="editor-field">
                                        
                                       @Html.EditorFor(model => model.CategoryName)
                                    @Html.ValidationMessageFor(model => model.CategoryName) 
                                </div>
                                                            
                                <div class="editor-label">
                                    @Html.LabelFor(model => model.CategoryType)
                                </div>
                                <div class="editor-field">
                                    
                             
                                    @Html.EditorFor(model => model.CategoryType)
                                    @Html.ValidationMessageFor(model => model.CategoryType)
                             
                                     </div>

                                <div class="editor-label">
                                    @Html.LabelFor(model => model.CategoryCode)
                                </div>
                                <div class="editor-field">
                                   
                                    @Html.EditorFor(model => model.CategoryCode)
                                    @Html.ValidationMessageFor(model => model.CategoryCode)  
                                </div>
                                <br />
                                <p>
                                    <input type="submit" value="Create" />
                                </p>
                            </fieldset>
                        }
                      
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@*script for popup*@
<script type="text/javascript">
    $(function () {
        $("#dlgLogin").dialog({
            modal: true,
            autoOpen: true,
            resizable: false,
            buttons: {
                Create: function () {
                    // perform login
                    $.post("@Url.Action("Login", "CategoryMaster")",
				    {
				        CategoryName: $('#CategoryName').val(),
				        CategoryType: $('#CategoryType').val(),
				        CategoryCode: $('#CategoryCode').val()
				    },
				    function (data, status, xhr) {
				        if (data.Success) {
				            alert('great'); // do something
				            $('#dlgLogin').dialog("close");
				            $('#divLoginButton').load("@Url.Action("GetLoginButton", "CategoryMaster")");
                        } else {
				            // do something else
                        }
				    });
                    },
                    Cancel: function () {
                        $(this).dialog("close");
                    }
                }
            });
        });
</script>

@* End othe Script*@
