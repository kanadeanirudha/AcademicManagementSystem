@model IEnumerable<AMS.Web.UI.Models.DepartmentMaster.DepartmentMaster>
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<!-- jquery for pop window  -->

<div id='divLoginButton'>
    <div id='divLogon'>
    </div>
    <div class="col-md-10">
      
        <div class="row">
            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Department Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Index</legend>

                            <p>
                                <a href='javascript:showLogonDialog();'>Create New Depratment</a>
                            </p>
                            <script type="text/javascript">

                                function showLogonDialog() {
                                    if ($("#dlgLogin").length == 0) {
                                        // ajax load
                                        $('#divLogon').load("@Url.Action("OpenCreate", "DepartmentMaster")");
                                    } else {
                                        // clear username & password fields
                                        $('#DepartmentName','#DepartmentShortCode', '#DepartmentPrintCode', '#AcademicNonAcademic', '#TeachingActivity').val('');


                                        // reopen the login dialog which was previously rendered
                                        $("#dlgLogin").dialog("open");
                                    }
                                }
                            </script>
                           
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>
                                        Action
                                    </th>
                                    <th>
                                        Department Name
                                    </th>
                                    <th>
                                        Department Short Code
                                    </th>
                                    <th>
                                       Department Print Code
                                    </th>
                                    <th>
                                       AcademicNonAcademic
                                    </th>
                                    
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                      @Html.ActionLink("Edit", "Edit", new { ID = item.ID }) |
                                      @Html.ActionLink("Details", "Details", new { ID = item.ID }) |
                                      @Html.ActionLink("Delete", "Delete", new { ID = item.ID })
                                        </td>
                                        <td>
                                            @item.DepartmentName
                                        </td>    
                                        <td>
                                            @item.DepartmentShortCode
                                        </td>
                                        <td>
                                            @item.DepartmentPrintCode
                                        </td>
                                        <td>
                                            @item.AcademicNonAcademic
                                        </td>
                                      
                                    </tr>
                                }
                            </table>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
