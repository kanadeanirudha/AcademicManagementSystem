@model IEnumerable<AMS.Web.UI.Models.StreamMaster.StreamMaster>
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<!-- jquery for pop window  -->

<div id='divLoginButton'>
    <div id='divLogon'>
    </div>
    <div class="col-md-10">
       <div class="row">
        <div class="navbar navbar-default bootstrap-admin-navbar-thin">
            <ol class="breadcrumb bootstrap-admin-breadcrumb">
                <li>
                    <a href="#">Organisation</a>
                </li>
                <li>
                    <a href="#">Academic Structure</a>
                </li>
                <li><a href="#">Add General Course Details</a></li>
                 <li class="active">Stream Master</li>
            </ol>
        </div>
    </div>
        <div class="row">

   

            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Stream Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Index</legend>
                            
                            <p>
                                <a href='javascript:showLogonDialog();'>Create New Stream</a>
                            </p>
                            <script type="text/javascript">

                                function showLogonDialog() {
                                    if ($("#dlgLogin").length == 0) {
                                        // ajax load
                                        $('#divLogon').load("@Url.Action("OpenCreate", "StreamMaster")");
                                    } else {
                                        // clear username & password fields
                                        $('#StreamDescription,#ShortCode', '#PrintCode','#DivisionID').val('');


                                        // reopen the login dialog which was previously rendered
                                        $("#dlgLogin").dialog("open");
                                    }
                                }
                            </script>
                             @Html.DropDownList("My Drop Down",(SelectList) ViewBag.DropDownValues)
                            <table class="table table-striped table-bordered">
                                <tr>
                                    
                                    <th>
                                       Stream Description
                                    </th>
                                    <th>
                                        Division ID
                                    </th>
                                    <th>
                                        Short Code
                                    </th>
                                    <th>
                                        Print Code
                                    </th>
                                    <th>
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                       
                                        <td>
                                            @item.StreamDescription
                                        </td>
                                        <td>
                                            @item.DivisionID
                                        </td>    
                                        <td>
                                            @item.ShortCode
                                        </td>
                                        <td>
                                            @item.PrintCode
                                        </td>
                                         <td>
                                      @Html.ActionLink("Edit", "Edit", new { ID = item.ID }) |
                                      @Html.ActionLink("Details", "Details", new { ID = item.ID }) |
                                      @Html.ActionLink("Delete", "Delete", new { ID = item.ID })
                                        </td>
                                    </tr>
                                }
                            </table>
                       
                            
                        </fieldset>
                            
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
