@model AMS.ViewModel.CRMSaleEnquiryMasterAndAccountDetailsViewModel

@*<script src="@Url.Content("~/Scripts/AMS_Scripts/CRMSales/CRMSaleEnquiryAccountMaster.js")" type="text/javascript"></script>*@
<style>
    .mfp-content{
        width: 25% !important;
    }
</style>
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Account Transfer Request</h2>
    </div>

    <div class="card" style="box-shadow: 0 0 0px rgba(0, 0, 0, 0.15);">
        <div class="card-body card-padding">

            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormAccountTransferRequest" role="form">
                @Html.HiddenFor(model => model.CRMSaleEnquiryAccountMasterID)
                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        <label>
                            <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.AccountTransferRequestReason)
                        </label>
                        @Html.TextAreaFor(model => model.AccountTransferRequestReason, new { maxlength = "200", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.AccountTransferRequestReason)
                </div>
                <div class="col-sm-12" style="margin-bottom:3%;">
                    <div class="form-group fg-line" style="text-align: right;">
                        <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateAccountTransferRequest" type="button" />
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        CRMSaleEnquiryAccountMaster.Initialize();
    });
</script>
