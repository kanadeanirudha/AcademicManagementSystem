@model AMS.ViewModel.CRMSaleEnquiryMasterAndAccountDetailsViewModel
<script src="@Url.Content("~/Scripts/AMS_Scripts/CRMSales/CRMSaleEnquiryAccountMaster.js")" type="text/javascript"></script>
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Account</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            
            <form id="FormCreateCRMSaleEnquiryAccountMaster" role="form">
                <div class="col-sm-12" style="padding-bottom: 10px;">
                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @Html.RadioButtonFor(model => model.AccountType, 1, new { @checked = true, id = "CorporateAccountType", onclick = "changeAccountType(this);", value = "1" })&nbsp;&nbsp;&nbsp;Corporate Account
                        </div>
                    </div>
                    <div class="col-sm-3">
                        <div class="form-group fg-line">
                            @Html.RadioButtonFor(model => model.AccountType, 2, new { id = "PersonalAccountType", onclick = "changeAccountType(this);", value = "2" })&nbsp;&nbsp;&nbsp;Personal Account
                        </div>
                    </div>
                </div>
                <div id="CorporateAccountDiv">
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.AccountName, new { })
                            @Html.TextBoxFor(model => model.AccountName, new { maxlength = "80", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.AccountName)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.ApproxAnnualAmount, new { })
                            @Html.TextBoxFor(model => model.ApproxAnnualAmount, new { maxlength = "12", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ApproxAnnualAmount)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.GeneralIndustryMasterID, new { })
                            @Html.DropDownListFor(model => model.GeneralIndustryMasterID, (SelectList)ViewBag.GeneralIndustryMasterList, "---Select Service ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.GeneralIndustryMasterID)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.CRMAccountProgressTypeID, new { })
                            @Html.DropDownListFor(model => model.CRMAccountProgressTypeID, (SelectList)ViewBag.CRMSaleAccountProgressTypeMasterList, "---Select Progess Type ---", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.CRMAccountProgressTypeID)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.EnquiryAccountMasterAddress, new { })
                            @Html.TextBoxFor(model => model.EnquiryAccountMasterAddress, new { maxlength = "200", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EnquiryAccountMasterAddress)
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.EnquiryAccountMasterCity, new { })
                            @Html.TextBoxFor(model => model.EnquiryAccountMasterCity, new { maxlength = "30", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EnquiryAccountMasterCity)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.EnquiryAccountMasterCountry, new { })
                            @Html.TextBoxFor(model => model.EnquiryAccountMasterCountry, new { maxlength = "30", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EnquiryAccountMasterCountry)
                    </div>
                </div>


                <div id="PersonalAccountDiv" style="display:none;">
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.FirstName)
                            </label>
                            @Html.TextBoxFor(model => model.FirstName, new { maxlength = "20", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.FirstName)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.LastName)
                            </label>
                            @Html.TextBoxFor(model => model.LastName, new { maxlength = "20", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.LastName)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.Designation)
                            </label>
                            @Html.TextBoxFor(model => model.Designation, new { maxlength = "40", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Designation)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.MobileNumber)
                            </label>
                            @Html.TextBoxFor(model => model.MobileNumber, new { maxlength = "20", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.MobileNumber)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.EmailId)
                            </label>
                            @Html.TextBoxFor(model => model.EmailId, new { maxlength = "80", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EmailId)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.EnquiryAccountContactPersonAddress)
                            </label>
                            @Html.TextBoxFor(model => model.EnquiryAccountContactPersonAddress, new { maxlength = "200", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EnquiryAccountContactPersonAddress)
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.EnquiryAccountContactPersonCity)
                            </label>
                            @Html.TextBoxFor(model => model.EnquiryAccountContactPersonCity, new { maxlength = "30", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EnquiryAccountContactPersonCity)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.EnquiryAccountContactPersonCountry)
                            </label>
                            @Html.TextBoxFor(model => model.EnquiryAccountContactPersonCountry, new { maxlength = "30", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.EnquiryAccountContactPersonCountry)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>
                                <span style="color: red;font-weight: bold">*</span>@Html.LabelFor(model => model.Pin)
                            </label>
                            @Html.TextBoxFor(model => model.Pin, new { maxlength = "10", @class = "form-control input-sm typeahead" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Pin)
                    </div>

                    <div class="form-group">
                        <label class="col-sm-3" style="padding: 14px 16px; width: 18%;" for="inputEmail3"><span style="color:red;">*</span>Upload Visiting Card</label>
                        <div class="fileinput fileinput-new" data-provides="fileinput" style="padding-top: 11px;">
                            <span class="btn btn-primary btn-file m-r-10">
                                <span class="fileinput-new">Select file</span>
                                <span class="fileinput-exists" style="padding-top: 11px;">Choose File</span>
                                @Html.FileFor(model => model.VisitingCard)
                            </span>
                            <span class="fileinput-filename"></span>
                            <a href="#" class="close fileinput-exists" data-dismiss="fileinput" style="top:18px;">&times;</a>
                        </div>
                    </div>
                </div>
                <div class="form-group" style="margin-left:2%;">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateCRMSaleEnquiryAccountMasterRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/fileinput/fileinput.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        CRMSaleEnquiryAccountMaster.Initialize();
    });
    function changeAccountType(val) {
        $("#FormCreateCRMSaleEnquiryAccountMaster").validate().resetForm();
        if (val.value == 1) {
            $('#CorporateAccountDiv').show();
            $('#PersonalAccountDiv').hide();
        } else if (val.value == 2) {
            $('#CorporateAccountDiv').hide();
            $('#PersonalAccountDiv').show();
        }
    }
</script>
