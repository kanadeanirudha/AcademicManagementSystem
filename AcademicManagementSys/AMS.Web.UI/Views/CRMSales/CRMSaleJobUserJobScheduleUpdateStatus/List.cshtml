    <div class="card-body card-padding">
        <form class="row" role="form">
            <div class="col-sm-5">
                <div class="form-group fg-line">
                    @Html.TextBoxFor(model => model.TransactionDate, new { @class = "form-control input-sm typeahead", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Transaction Date", placeholder = "Transaction Date" })
                </div>
            </div>

            <div class="col-sm-5">
                <div class="form-group fg-line">
                    @Html.DropDownList("MeetingStatus", ViewData["MeetingStatus"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Meeting Status" })
                </div>
            </div>

            <div class="col-sm-2">
                <input type="button" value="@Resources.GlobalProperties_ShowList" class="btn btn-primary btn-sm m-t-5" id="btnShowList" />
            </div>
        </form>
    </div>
    <div class="bootgrid-header container-fluid" id="data-table-command-header">
        <div class="row">
            <div class="col-sm-12 actionBar">
                <div class="search form-group">
                    <div class="input-group">
                        <span class="zmdi icon input-group-addon glyphicon-search"></span>
                        <input type="text" id="UserSearch" placeholder="Search" class="search-field form-control">
                    </div>
                </div>
                <div class="actions btn-group">
                    @*   <button title="Refresh" type="button" class="btn btn-default">
                            <span class="zmdi icon zmdi zmdi-refresh zmdi-hc-fw"></span>
                        </button>*@
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle">
                            <span class="dropdown-text" id="tblDisplayRowLength">@Resources.GlobalProperties_10</span> <span class="caret"></span>
                        </button>
                        <ul role="menu" style="cursor: pointer" id="showrecords" class="dropdown-menu pull-right">
                            <li class="active" aria-selected="true">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_10">@Resources.GlobalProperties_10</a>
                            </li>
                            <li aria-selected="false">
                                <a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_25">@Resources.GlobalProperties_25</a>
                            </li>
                            <li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="@Resources.GlobalProperties_50">@Resources.GlobalProperties_50</a></li>
                            @*<li aria-selected="false"><a class="dropdown-item dropdown-item-button" data-action="-1">All</a></li>*@
                        </ul>
                    </div>
                    <div class="dropdown btn-group">
                        <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle" aria-expanded="false">
                            <span class="dropdown-text">
                                <span class="zmdi icon zmdi-view-module"></span>
                            </span><span class="caret"></span>
                        </button>
                        <ul role="menu" id="toggleTableColumn" class="dropdown-menu pull-right">
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="1" name="ScheduleDesription">
                                        Schedule Desription<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="2" name="Time">
                                        Time<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="3" name="ScheduleType">
                                        Schedule Type<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="4" name="SubScheduleType">
                                        Sub Schedule Type<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>

                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="5" name="ScheduleStatus">
                                        Schedule Status<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>

                            <li>
                                <div class="checkbox">
                                    <label class="dropdown-item" aria-disabled="false">
                                        <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="6" name="Action">
                                        @Resources.TableHeaders_Action<i class="input-helper"></i>
                                    </label>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <table id="myDataTable" class="table table-striped table-vmiddle table-responsive ">
        <thead>
            <tr>
                <th>Date </th>
                <th>Schedule Desription</th>
                <th>Time</th>
                <th style="text-align: center">Schedule Type</th>
                <th style="text-align: center">Sub Schedule Type</th>
                <th style="text-align: center">Schedule Status</th>
                <th>@Resources.TableHeaders_Action</th>
            </tr>
        </thead>
    </table>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/nouislider/distribute/jquery.nouislider.all.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">

    $(document).ready(function () {
        var oTable;
        CRMSaleJobUserJobScheduleUpdateStatus.Initialize();
        oTable = $('#myDataTable').DataTable({
            "bServerSide": true,
            "sAjaxSource": "CRMSaleJobUserJobScheduleUpdateStatus/AjaxHandler",
            "bJQueryUI": true,
            "sScrollY": false,
            "bProcessing": true,
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },
            "fnServerParams": function (aoData) {
                aoData.push({ "name": "TransactionDate", "value": $("#TransactionDate").val() }),
                aoData.push({ "name": "MeetingStatus", "value": $("#MeetingStatus").val() })
            },
            "columnDefs": [
                            {
                                "visible": false, "targets": 0,
                            },
                            {
                                "targets": 1,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "<p  style=' height:5px;padding-left: 15px;'>" + data[1] + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 2,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = "<p  style=' height:5px;'>" + data[2] + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 3,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var scheduleType = null;
                                    if (data[3] == "1") {
                                        scheduleType = "<button class='btn bgm-lightgreen btn-xs'>Meeting</button>";
                                    }
                                    else if (data[3] == "2") {
                                        scheduleType = "<button class='btn bgm-lightblue btn-xs'>Survey</button>";
                                    }
                                    else if (data[3] == "3") {
                                        scheduleType = "<button class='btn bgm-deeppurple btn-xs'>Other</button>";
                                    }
                                    else if (data[3] == "4") {
                                        scheduleType = "<button class='btn bgm-bluegray btn-xs'>Call</button>";
                                    }
                                    var result = "<p  style='text-align:center;  height:5px;'>" + scheduleType + "</p>";
                                    return result;
                                }
                            },

                            {
                                "targets": 4,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var subScheduleType = '';
                                    if (data[8] == "1") {
                                        subScheduleType = "<button class='btn bgm-brown btn-xs'>Pitch Meeting</button>";
                                    }
                                    else if (data[8] == "2") {
                                        subScheduleType = "<button class='btn bgm-teal btn-xs'>Introductory Meeting</button>";
                                    }
                                    else if (data[8] == "3") {
                                        subScheduleType = "<button class='btn bgm-indigo btn-xs'>Presentation</button>";
                                    }
                                    else if (data[8] == "4") {
                                        subScheduleType = "<button class='btn bgm-purple btn-xs'>Follow-up</button>";
                                    }
                                    var result = "<p  style='text-align:center;  height:5px;'>" + subScheduleType + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 5,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var scheduleStatus = null;
                                    if (data[4] == 1) {
                                        scheduleStatus = "<button class='btn bgm-green btn-xs'>Completed</button>";
                                    }
                                    else if (data[4] == 2) {
                                        scheduleStatus = "<button class='btn bgm-cyan btn-xs'>Cancelled</button>";
                                    }
                                    else if (data[4] == 3) {
                                        scheduleStatus = "<button class='btn bgm-orange btn-xs'>Pending</button>";
                                    }
                                    else if (data[4] == 4) {
                                        scheduleStatus = "<button class='btn bgm-teal btn-xs'>ReSchedule</button>";
                                    }
                                    var result = "<p  style='text-align:center; height:5px;'>" + scheduleStatus + "</p>";
                                    return result;
                                }
                            },
                            {
                                "targets": 6,
                                "bSortable": false,
                                "data": null,
                                "render": function (data, type, full, meta) {
                                    var result = null, result1 = "", result2 = null, result3 = null;
                                    //if (data[4] != 1 && data[4] != 2) {
                                    //if (data[4] != 1 && data[4] != 2 && data[4]!= 4) {
                                    if (data[4] == 3) {
                                        if (data[12] == "True") {
                                            if (data[13] == "False") {
                                                result1 = '@Html.ActionLink("CompleteSchedule1", "CompleteMeeting", new { StatusDetail = "ID1" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                                result1 = result1.replace('ID1', data[5] + "~" + data[3] + '~' + data[0] + "~" + data[1] + "~" + data[6].replace(':', "`") + "~" + data[7].replace(':', "`") + "~" + data[8] + "~" + data[9] + "~" + data[10] + "~" + data[11] + "~" + "Done");
                                                result1 = result1.replace("CompleteSchedule1", '<span class=\"zmdi zmdi-check\" title =\"Complete\"></span>');
                                            } else {
                                                result1 = "<button class='btn btn-default waves-effect' title='Invited Schedule'><i class='zmdi zmdi-check'></i></button>";
                                            }
                                        }
                                        if (data[13] == "False") {
                                            result2 = '@Html.ActionLink("ReSchedule1", "CompleteMeeting", new { StatusDetail = "ID1" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                            result2 = result2.replace('ID1', data[5] + "~" + data[3] + '~' + data[0] + "~" + data[1] + "~" + data[6].replace(':', "`") + "~" + data[7].replace(':', "`") + "~" + data[8] + "~" + data[9] + "~" + data[10] + "~" + data[11] + "~" + "Reschedule");
                                            result2 = result2.replace("ReSchedule1", '<span class=\"zmdi zmdi-replay\" title =\"Reschedule\"></span>');
                                        } else {
                                            result2 = "<button class='btn btn-default waves-effect' title='Invited Schedule'><i class='zmdi zmdi-replay'></i></button>";
                                        }
                                        result3 = '@Html.ActionLink("CancelSchedule1", "CompleteMeeting", new { StatusDetail = "ID1" }, new { @class = "mfpAjaxModal btn btn-default waves-effect" })';
                                        result3 = result3.replace('ID1', data[5] + "~" + data[3] + '~' + data[0] + "~" + data[1] + "~" + data[6].replace(':', "`") + "~" + data[7].replace(':', "`") + "~" + data[8] + "~" + data[9] + "~" + data[10] + "~" + data[11] + "~" + "Cancel");
                                        result3 = result3.replace("CancelSchedule1", '<span class=\"zmdi zmdi-close\" title =\"Cancel\"></span>');

                                        result = result1 + "  " + result2 + "  " + result3;
                                    }
                                    //else if (data[3] == 3) {
                                    //    result = " <a href=\"javascript:void(0);\" data-toggle=\"tooltip\" class=\"btn btn-default waves-effect\" onclick=\"fancyBoxPopUpAjax('Delete Enquiry','Are you sure? want to remove this " + data[0] + " enquiry ?','error','btn-danger','Yes!','/CRMSaleEnquiryMaster/Delete/" + data[3] + "','content','page-loader','CRMSaleEnquiryMaster')\"><span class=\"zmdi zmdi-edit\"></span></a>";;
                                    //}

                                    //  }
                                    return result;

                                }
                            }
            ],
            "drawCallback": function (settings) {
                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;
                var table = $('#myDataTable').dataTable();
                var groupArray = '';
                api.column(1, { page: 'current' }).data().each(function (group, i) {
                    group = String(group).split(',')[0];
                    if (last !== group) {
                        $(rows).eq(i).before(
                            '<tr class="group"><td colspan="6"  style="font-weight:bold;font-size:12px;font-family: verdana;" >' + group + '</td></tr>'
                        );
                        last = group;
                    }
                });
            }
        });

        $("#TransactionDate").tooltip();
        $("#MeetingStatus").tooltip();

        $("#TransactionDate").datetimepicker({
            format: 'DD MMMM YYYY'
        });
        DataTableSettings(oTable, 'myDataTable', "toggleTableColumn");
    });


</script>
