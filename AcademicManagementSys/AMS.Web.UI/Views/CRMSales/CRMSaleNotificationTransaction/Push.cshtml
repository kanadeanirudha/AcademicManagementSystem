@model AMS.ViewModel.NotificationTypeMasterAndNotificationTransactionViewModel

<link href="@Url.Content("~/Content/materialtheme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Reminder</h2>
    </div>
    <div class="card">

        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>

            <form id="FormCreatePushNotification" role="form">
                @Html.HiddenFor(model => model.FromUserID)
                @Html.HiddenFor(model => model.FromMailID)


                <div class="col-sm-12" id="employeeName">
                    @Html.LabelFor(model => model.ToUserID, new { @class = "f-500 m-b-5" })
                    <p id="e5_f">
                        <select id="employee" class="selectpicker col-sm-12" multiple name="selEmployee">
                            @foreach (var emp in Model.ListEmpEmployeeMaster)
                            {
                                //if (@emp.ID != Model.FromUserID)
                                //{
                                    <option id="@emp.ID~@emp.EmailID" value="@emp.ID~@emp.EmailID"> @emp.EmailID (@emp.EmployeeFullName)</option>
                                //}
                            }
                        </select>
                    </p>
                    @Html.ValidationMessageFor(model => model.ToUserID)
                </div>


                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.SubjectDescription, new { })
                        @Html.TextBoxFor(model => model.SubjectDescription, new { @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.SubjectDescription)
                </div>

                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.BodyDescription, new { })
                        @Html.TextAreaFor(model => model.BodyDescription, new { @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.BodyDescription)
                </div>

                <br />
                <div class="form-group row">
                    <input class="btn btn-primary btn-sm m-t-12 waves-effect" value="@Resources.ButtonAction_Submit" id="CreatePushNotificationRecord" type="button" style="margin-left:3%;" />
                </div>

            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/bootstrap-select/dist/js/bootstrap-select.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/nouislider/distribute/jquery.nouislider.all.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {

        $('.selectpicker').selectpicker();
        CRMSaleNotificationTransaction.Initialize();
    });
</script>
