@model AMS.ViewModel.CRMSaleGroupMasterAndAllocateEmployeeInGroupViewModel
<div id="custom-content">
    <div class="block-header">
         <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Allocate Group To Employee</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateCRMSaleAllocateEmployeeInGroup" role="form">
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.CRMSaleGroupMasterID, new { })
                        @Html.DropDownListFor(model => model.CRMSaleGroupMasterID, (SelectList)ViewBag.CRMSaleGroupMasterList, "---Select Group ---", new { @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.CRMSaleGroupMasterID)
                </div>
                <div class="col-sm-6">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.EmployeeName, new { })
                        @Html.DropDownListFor(model => model.EmployeeId, (SelectList)ViewBag.EmpEmployeeMasterList, "--Select Employee--", new { @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.EmployeeId)
                </div>
                <div class="form-group">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateCRMSaleAllocateEmployeeInGroupRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        CRMSaleAllocateEmployeeInGroup.Initialize();
    });
</script>
