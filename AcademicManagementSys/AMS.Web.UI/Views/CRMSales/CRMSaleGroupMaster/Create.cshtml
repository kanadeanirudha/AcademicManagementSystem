@model AMS.ViewModel.CRMSaleGroupMasterAndAllocateEmployeeInGroupViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create Group</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            @if (Model.GeneralGroupTypeAttributesId == null || Model.GeneralGroupTypeAttributesId == 0)
            {
                <div id="displayErrorMessage" role="alert" class="alert" style="background-color: #F44336;">
                    <p class="alert-heading" style="color: #fff;">@Resources.DisplayMessage_UnauthorizedAccess</p>
                </div>
            }
            else
            {
                <form id="FormCreateCRMSaleGroupMaster" role="form">
                    @Html.HiddenFor(m => m.GeneralGroupTypeAttributesId)
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.GroupName, new { })
                        @Html.TextBoxFor(model => model.GroupName, new { maxlength = "50", @class = "form-control input-sm typeahead" })
                    </div>
                    @Html.ValidationMessageFor(model => model.GroupName)
                    <div class="form-group">
                        <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateCRMSaleGroupMasterRecord" type="button" />
                    </div>
                </form>
            }
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        CRMSaleGroupMaster.Initialize();
    });
</script>
