<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormUpdate_SubjectMaster </h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditOrganisationSubjectMaster">

                @Html.HiddenFor(model => model.ID)
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.UniversityID)
                @Html.HiddenFor(model => model.CentreCode)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.Descriptions, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Descriptions, new { @class = "form-control", maxlength = "100", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Descriptions)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.SubjectCode, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.SubjectCode, new { @class = "form-control", maxlength = "30", style = "" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SubjectCode)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.PaperCode, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(m => m.PaperCode, new { @class = "form-control", maxlength = "25", style = "" })
                        </div>
                        @Html.ValidationMessageFor(m => m.PaperCode)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.LanguageID, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownListFor(m => m.LanguageID, (SelectList)ViewBag.GeneralLanguageMaster, Resources.ddlHeaders_Language, new { @class = "form-control", style = "" })
                        </div>
                        @Html.ValidationMessageFor(m => m.LanguageID)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-5">
                        @Html.LabelFor(model => model.SubjectIntroYear, new { style = "" })
                        <div class="form-group fg-line dtp-container">
                            @Html.TextBoxFor(m => m.SubjectIntroYear, new { @class = "form-control", id = "SubjectIntroYear", ReadOnly = "True", style = "background-color:#fff;" })
                        </div>
                    </div>
                    <div class="col-sm-1">
                        <button class="btn bgm-teal waves-effect" type="button" id="DisableDate_Clear"><i class="zmdi zmdi-refresh"></i></button>
                    </div>
                </div>

                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="EditOrganisationSubjectMasterRecord" type="button" />
                </div>
            </form>

        </div>
    </div>
</div>
