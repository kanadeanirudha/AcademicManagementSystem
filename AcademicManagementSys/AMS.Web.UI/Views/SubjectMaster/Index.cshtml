@model IEnumerable<AMS.Web.UI.Models.SubjectMaster.SubjectMaster>
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")

<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script src="~/Scripts/jquery-ui-1.8.24.min.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<!-- jquery for pop window  -->

<div id='divLoginButton'>
    <div id='divLogon'>
    </div>
    <div class="col-md-10">
       <div class="row">
        <div class="navbar navbar-default bootstrap-admin-navbar-thin">
            <ol class="breadcrumb bootstrap-admin-breadcrumb">
                <li>
                    <a href="#">Course Planning</a>
                </li>
                <li>
                    <a href="#">Add Subject List</a>
                </li>
                @*<li><a href="#">Add General Course Details</a></li>*@
                 <li class="active">Subject Master</li>
            </ol>
        </div>
    </div>
        <div class="row">

   

            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Subject Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Index</legend>

                            <p>
                                <a href='javascript:showLogonDialog();'>Create New Subject</a>
                            </p>
                            <script type="text/javascript">

                                function showLogonDialog() {
                                    if ($("#dlgLogin").length == 0) {
                                        // ajax load
                                        $('#divLogon').load("@Url.Action("OpenCreate", "SubjectMaster")");
                                    } else {
                                        // clear username & password fields
                                        $('#Description,#SubjectCode', '#SubjectIntroYear', '#UniversityID','#LanguageID','#PaperCode').val('');


                                        // reopen the login dialog which was previously rendered
                                        $("#dlgLogin").dialog("open");
                                    }
                                }
                            </script>
                           
                            <table class="table table-striped table-bordered">
                                <tr>
                                    <th>University Name</th>
                                    <th>
                                       Subject Description
                                    </th>
                                    <th style="text-align:center">
                                        Subject Code
                                    </th>
                                    <th>
                                       Introduction Year
                                    </th>
                                    <th style="width:10px;text-align:center;">
                                        
                                       Subject Language
                                    </th>
                                    <th>
                                        Paper Code

                                    </th>
                                    <th style="text-align:center">
                                        Action
                                    </th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                       <td>
                                           @item.UniversityID
                                       </td>
                                        <td>
                                            @item.Description
                                        </td>
                                        <td style="text-align:center">
                                            @item.SubjectCode
                                        </td>    
                                        <td>
                                            @item.SubjectIntroYear
                                        </td>
                                        <td style="text-align:center">
                                            @item.LanguageID
                                         </td>
                                        <td>

                                            @item.PaperCode

                                        </td>
                                        <td>
                                      @Html.ActionLink("Edit", "Edit", new { ID = item.ID }) |
                                      @Html.ActionLink("Details", "Details", new { ID = item.ID }) |
                                      @Html.ActionLink("Delete", "Delete", new { ID = item.ID })
                                        </td>
                                    </tr>
                                }
                            </table>
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
