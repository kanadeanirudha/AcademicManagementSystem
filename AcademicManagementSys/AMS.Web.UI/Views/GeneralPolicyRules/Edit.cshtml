@model AMS.ViewModel.GeneralPolicyRulesViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.multiple.select.js")" type="text/javascript"></script>

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
@Html.HiddenFor(model => model.ID)

<div id="update-message" class="error invisible"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive">Edit Policy Rule On (@Model.PolicyCode) </h5> 
    </div>

    <div class="widget-content">
        <form id="FormEditGeneralPolicyRules" method="post" class="form-horizontal well">

            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            @Html.LabelFor(model => model.PolicyName, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                            @Html.TextBoxFor(m => m.PolicyCode, new { style = "font-weight:bold" })
                        </div>
                        <div class="spanFullName span2">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.PolicyQuestionDescription, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextAreaFor(m => m.PolicyQuestionDescription, new { style = "font-weight:bold" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.PolicyRange, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                            @Html.TextBoxFor(m => m.PolicyRange, new { style = "font-weight:bold" })
                            <br />
                            @Html.ValidationMessageFor(model => model.PolicyRange)
                        </div>
                        <div class="spanFullName span2">

                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.PolicyDefaultAnswer, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">

                            @Html.TextBoxFor(m => m.PolicyDefaultAnswer, new { style = "font-weight:bold" })
                            <br />
                            @Html.ValidationMessageFor(model => model.PolicyDefaultAnswer)
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.PolicyAnsType, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                           @Html.DropDownList("PolicyAnsType", ViewData["PolicyAnsType"] as List<SelectListItem>, new { style = "width:220px;font-Weight:Bold;", @class = "dropdown1" })
                            <br />
                            @Html.ValidationMessageFor(m => m.PolicyAnsType)


                        </div>
                        <div class="spanFullName span2">
                            <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                            @Html.LabelFor(model => model.RangeSeparateBy, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.DropDownList("RangeSeparateBy", ViewData["RangeSeparateBy"] as List<SelectListItem>, new { style = "width:220px;font-Weight:Bold;", @class = "dropdown1" })
                            <br />
                            @Html.ValidationMessageFor(m => m.RangeSeparateBy)
                        </div>
                    </div>

                </div>
            </div>

          
            <div class="form-actions" style="padding-left: 0px; padding-bottom: 0px; text-align: right">
                <input id="EditGeneralPolicyRulesRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" style="width: 50px;" />
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        GeneralPolicyRules.Initialize();

    });

  //  $('#checkboxlist1').multipleSelect();


</script>

<style>
    .span1 {
        width: 115px;
    }

    .span2 {
        width: 136px;
    }
</style>
