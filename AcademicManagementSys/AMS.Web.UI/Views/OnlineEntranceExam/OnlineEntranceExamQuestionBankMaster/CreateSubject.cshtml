<div class="widget-block">
    <div class="widget-head">
        <h5 id="hFive">Create Online Exam Subject </h5>
    </div>

    <div class="widget-content">
        <form id="FormCreateOnlineExamQuestionBankSubject" method="post" class="form-horizontal well">
            <div id="DivSuccessMessage" style="display: none; color: #000; margin-bottom: 0px;" class="alert"></div>
            @Html.HiddenFor(x=>x.CourseYearDetailID)
            <div class="nonboxy-widget">
                <div class="row">
                    <div class="span10">
                        <div class="row control-group">

                            <div class="row">
                                <div class="span10">
                                    <div class="row control-group">
                                        <div class="span">&nbsp;</div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.CentreCode, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span3">
                                           @Html.DropDownListFor(m => m.CentreCode, Model.ListGetAdminRoleApplicableCentreItems, Resources.ddlHeaders_CentreName, new { id = "CentreCode", @class = "form-control chosen-select", style = "font-weight:bold; width:78%; margin-left:2%;" })
                                            <br />
                                            @*@Html.ValidationMessageFor(model => model.CentreCode)*@
                                        </div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.University, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span2">
                                            @Html.DropDownListFor(m => m.University, Model.ListOrganisationUnivesitytMasterItems, Resources.ddlHeaders_UniversityName, new { id = "University", @class = "form-control chosen-select", style = "font-weight:bold;  margin-left:5%;" })
                                            <br />
                                            @*@Html.ValidationMessageFor(model => model.SubjectName)*@
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="span10">
                                    <div class="row control-group">
                                        <div class="span">&nbsp;</div>
                                        <div class="span2">
                                            @Html.LabelFor(model => model.Course, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span2">
                                            @Html.DropDownListFor(m => m.Course, Model.ListOnlineExamCourseItems, "-----Select course----", new { id = "Course", @class = "form-control chosen-select", style = "font-weight:bold;  margin-left:-56%; width:124%" })
                                            <br />
                                            @*@Html.ValidationMessageFor(model => model.Course)*@
                                        </div>
                                        <div class="span1">
                                            @Html.LabelFor(model => model.CourseYearID, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span3">
                                            @Html.DropDownListFor(m => m.CourseYearID, Model.ListOrganisationCourseYearItems, "-----Select course year -----", new { id = "CourseYearID", @class = "form-control chosen-select", style = "font-weight:bold; margin-left:-2%;" })
                                            <br />
                                            @*@Html.ValidationMessageFor(model => model.CourseYearID)*@
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="span10">
                                    <div class="row control-group">
                                        <div class="span">&nbsp;</div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.IsAcademic, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span3">
                                            @Html.DropDownList("Academic", ViewData["Academic"] as List<SelectListItem>, new { style = "font-weight:bold;  width:78%; margin-left:3%;" })
                                            <br />
                                            @Html.ValidationMessageFor(model => model.IsAcademic)
                                        </div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.Department, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span2">
                                            @Html.DropDownListFor(m => m.Department, Model.ListOrganisationDepartmentMasterItems, "----Select Department----", new { id = "Department", @class = "form-control chosen-select", style = "font-weight:bold;" })
                                            <br />
                                            @Html.ValidationMessageFor(model => model.Department)
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="span10">
                                    <div class="row control-group">
                                        <div class="span">&nbsp;</div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.Subject, new { style = "font-Weight:Bold;" })
                                        </div>
                                        <div class="span3">
                                            @Html.DropDownListFor(m => m.Subject, Model.ListOrganisationSubjectMasterItems, "-----Select subject-----", new { id = "Subject", @class = "form-control chosen-select", style = "font-weight:bold;margin-left:12%; width:78%;" })
                                            <br />
                                            @Html.ValidationMessageFor(model => model.Subject)
                                        </div>
                                        <div class="spanFullName">                                          
                                        </div>
                                        <div class="span2">                                          
                                            <br />                                           
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right; margin-left: 3%;">
                                <input type="button" id="CreateQuestionBankSubject" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                                @*<input name="" id="resetSubject" type="button" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />*@
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>




<script type="text/javascript">
    $(document).ready(function () {
        $("#SelectedCourseYearID").autocomplete({
            source: function (request, response) {
                alert();
                debugger;
                $.ajax({
                    url: "/OnlineEntranceExamQuestionBankMaster/GetCourseYearDetailList",
                    type: "Post",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.name, value: item.name, id: item.id };
                        }))
                    }
                })
            },
            select: function (event, ui) {
                //alert(ui.item.label);
                $(this).val(ui.item.label);                                             // display the selected text
                //$("#SubjectID").val(ui.item.id);
            }
        });
        OnlineEntranceExamQuestionBankMaster.Initialize();
    });
</script>






















