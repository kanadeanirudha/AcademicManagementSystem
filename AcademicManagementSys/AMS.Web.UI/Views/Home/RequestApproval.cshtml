@model AMS.ViewModel.DashboardViewModel
@{
    Layout = null;
}

<form id="FormCreateRequestApproval" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AMS_Scripts/Dashboard/RequestApproval.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.TaskCode, new { id="_TaskCode" })
    @Html.HiddenFor(m => m.TaskNotificationDetailsID)
    @Html.HiddenFor(m => m.TaskNotificationMasterID)
    @Html.HiddenFor(m => m.GeneralTaskReportingDetailsID)
    @Html.HiddenFor(m => m.PersonID)
    @Html.HiddenFor(m => m.StageSequenceNumber)
    @Html.HiddenFor(m => m.IsLastRecord)
   

    <div class="widget-block" style="width: 500px; height: auto;">
        <div class="widget-head">
            <h5>@Html.DisplayFor(model => model.RequestApprovalFieldMasterList[0].FormName) @Resources.MainMenu_RequestApproval</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                 <div id="update-message" class="error invisible"></div>
                @*  <div class="control-group control-label">
                    <div style="float: left; width: 200px;">@Html.LabelFor(model => model.Description, new { style = "font-Weight:Bold; display: -moz-stack;" })</div>
                    <div style="font-weight: bold">: &nbsp;@Html.DisplayFor(model => model.RequestApprovalFieldMasterList[0].Description)</div>

                </div>*@

                @for (int i = 0; i < Model.RequestApprovalFieldMasterList.Count(); i++)
                {
                    <div class="control-group control-label">
                        <div style="float: left; width: 200px; font-weight: bold;">
                            @Html.DisplayFor(model => model.RequestApprovalFieldMasterList[i].Lable, new { style = "font-Weight:Bold; display: -moz-stack;" })
                        </div>
                        <div style="font-weight: bold">: &nbsp;@Html.DisplayFor(model => model.RequestApprovalFieldMasterList[i].LableValue) </div>

                    </div>
                }


                <div class="control-group control-label">
                    <div style="float: left; width: 200px;">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.ApprovalStatus, new { style = "font-Weight:Bold; display: -moz-stack;" })

                    </div>
                    <div style="font-weight: bold">
                        : &nbsp;
                         @Html.RadioButtonFor(model => model.ApprovalStatus, true, new { @checked = true, id = "Approve" }) &nbsp; @Resources.RadioButton_Approve &nbsp;&nbsp;
                              @Html.RadioButtonFor(model => model.ApprovalStatus, false, new { id = "Reject" })&nbsp;&nbsp; @Resources.RadioButton_Reject 

                    </div>

                    @* <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.ApprovalStatus, new { style = "font-Weight:Bold;" })

                    <div class="controls input-xlarge text-tip">
                        @Html.RadioButtonFor(model => model.ApprovalStatus, true, new { @checked = true, id = "Approve" })&nbsp;&nbsp;&nbsp; Approve &nbsp;&nbsp;&nbsp;
                              @Html.RadioButtonFor(model => model.ApprovalStatus, false, new { id = "Reject" })&nbsp;&nbsp;&nbsp;Reject
                    </div>*@
                </div>
                <div class="control-group control-label">


                    <div style="float: left; width: 200px;">
                        <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                        @Html.LabelFor(model => model.Remark, new { style = "font-Weight:Bold; display: -moz-stack;" })

                    </div>
                    <div style="font-weight: bold">
                        : &nbsp;
                          @Html.TextAreaFor(model => model.Remark, new { maxlength = "200", style = "font-Weight:Bold; width: 200px;" })


                    </div>
                    <div style="float: left; width: 200px;">
                        &nbsp

                    </div>
                    <div style="font-weight: bold">
                        &nbsp;  &nbsp;
                        @Html.ValidationMessageFor(model => model.Remark)

                    </div>
                    @* <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.Remark, new { style = "font-Weight:Bold;" })

                    <div class="controls input-xlarge text-tip">
                        @Html.TextAreaFor(model => model.Remark, new { maxlength = "200", style = "font-Weight:Bold; width: 200px;" })
                        <br />
                        @Html.ValidationMessageFor(model => model.Remark)
                    </div>*@
                </div>


                <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">
                    <input type="button" id="CreateRequestApprovalRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" style="width: 65px;" />
                    @*<input id="reset" class="btn btn-primary" value="Reset" style="width: 40px;" />*@
                    @*  <button class="btn">Cancel</button>*@
                </div>

            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        RequestApproval.Initialize();
    });
</script>


