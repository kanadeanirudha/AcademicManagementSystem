    Layout = null;
}


<link href="@Url.Content("~/Content/materialtheme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormEdit_GeneralExperienceType</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding" style="padding-bottom:150px;">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <div id="update-message" class="alert" style="display: none; color: #000"></div>
            <form id="FormEditGeneralExperienceTypeMaster" method="post">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)
                <div class="col-sm-12">
                    <div class="col-sm-12">
                        <span style="color:red">*</span>@Html.LabelFor(model => model.ExperienceTypeDescription, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.ExperienceTypeDescription, new { @class = "form-control", maxlength = "60" })
                        </div>
                        @Html.ValidationMessageFor(model => model.ExperienceTypeDescription)
                    </div>
                </div>


                <div class="col-sm-12">
                    <div class="form-group" style="padding-left:10px;">
                        <button type="button" id="EditGeneralExperienceTypeMasterRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                    </div>
                </div>


            </form>
        </div>
    </div>
</div>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralExperienceTypeMaster.Initialize();
    });
</script>