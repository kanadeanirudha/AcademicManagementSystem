@model AMS.ViewModel.StudentSectionChangeRequestViewModel

@{
    ViewBag.title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<script src="@Url.Content("~/Scripts/AMS_Scripts/Student/StudentSectionChangeRequest.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.HiddenFor(m=>m.StudentId)
@Html.HiddenFor(m=>m.CentreCode)
@Html.HiddenFor(m=>m.SessionID)
@Html.HiddenFor(m=>m.OldSectionDetailID)

<div class="container-fluid">
    <ul class="breadcrumb">
        <li>@Resources.MainMenu_Student<span class="divider">»</span></li>
        <li>@Resources.FormName_ChangeSection</li>
    </ul>
    <div id="SuccessMessage" style="display:none;color:#000;" class="alert"></div>
    <div class="row-fluid">
        <div class="span6">
            <div class="widget-block">
                <div class="widget-head">
                    <h5> @Resources.TabledHeader_StudentDetails</h5>
                </div>
                <div class="widget-content">
                    <div class="widget-box">
                        <form class="form-horizontal well white-box">
                            <fieldset>
                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.StudentName, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.StudentName)
                                    </div>
                                </div>
                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.CentreName, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.CentreName)
                                    </div>
                                </div>
                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.SessionName, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @if (Model.SessionName != "Session not defined !")
                                        {
                                            @Html.DisplayFor(m => m.SessionName, new { @class = "control-label", style = "font-weight:bold" })
                                        }
                                        else
                                        {
                                            <b style="color:red;">@Html.DisplayFor(m => m.SessionName, new { @class = "control-label", style = "font-weight:bold" })</b>
                                        }
                                    </div>
                                </div>
                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.BranchDescription, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.BranchDescription)
                                    </div>
                                </div>

                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.CourseYearDesc, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.CourseYearDesc)
                                    </div>
                                </div>

                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.SectionDesc, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.SectionDesc)
                                    </div>
                                </div>

                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.AcademicYear, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.AcademicYear)
                                    </div>
                                </div>

                                <div class="control-group" style="margin-left:50px">
                                    @Html.LabelFor(m => m.StudentCode, new { @class = "control-label", style = "font-weight:bold;line-height: 5px" })
                                    <div class="controls">
                                        @Html.DisplayFor(m => m.StudentCode)
                                    </div>
                                </div>

                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="span6">
            <div class="widget-block">
                <div class="widget-head">
                    <h5>@Resources.TabledHeader_ChangeSection</h5>
                </div>
                <div class="widget-content">
                    <div class="widget-box">
                        <form id="FormCreateStudentSectionChangeRequest" class="form-horizontal well white-box">
                            <fieldset>
                                <div class="control-group">
                                    @Html.LabelFor(m => m.SectionDetailID, new { @class = "control-label", style = "font-weight:bold;line-height: 5px;line-height:20px" })
                                    <div class="controls">
                                        @Html.DropDownListFor(m => m.SectionDetailID, (SelectList)ViewBag.SectionList, "-----------------Select-----------------")
                                        <br />
                                        @Html.ValidationMessageFor(m=>m.SectionDetailID)
                                    </div>
                                </div>
                                <div class="form-actions" style="text-align:right">
                                    <input type="button" id="CreateStudentSectionChangeRequestRecord" value="@Resources.ButtonAction_Request" class="btn btn-primary" />
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        StudentSectionChangeRequest.Initialize();
    });
</script>