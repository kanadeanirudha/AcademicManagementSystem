@model AMS.ViewModel.StudentReadmissionViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 60%;
    }
</style>

<script src="@Url.Content("~/Scripts/AMS_Scripts/Student/StudentReadmission.js")" type="text/javascript"></script>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />

<link href="@Url.Content("~/Content/materialtheme/vendors/bower_components/bootstrap-select/dist/css/bootstrap-select.css")" rel="stylesheet" type="text/css" />

<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>


<script src="~/Content/materialtheme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>




@*<div id="ListViewModel" class="container">
</div>*@


<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.Headers_SelectStudentToReAdmit</h2>
    </div>
    <div class="card">
        <form class="" id="FormCreateStudentReadmission">
            @Html.HiddenFor(m => m.SessionID)
            @Html.HiddenFor(m => m.CentreCode)
            <div class="card-body card-padding">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="col-sm-6">
                            <div class="form-group fg-line select">
                                @Html.DropDownListFor(m => m.SelectedCentreCode, Model.StudyCentreListMasterItems, new { @class = "form-control", style = "", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre*" })
                            </div>
                            @Html.ValidationMessageFor(m => m.SelectedCentreCode)
                        </div>

                        <div class="col-sm-6">
                            <div class="">
                                @Html.LabelFor(m => m.SessionName, new { @class = "control-label", style = "font-weight:bold" })
                            </div>

                            <div id="sessionName" class="" style="">
                                @if (Model.SessionName != "Session not defined !")
                                {
                                    @Html.DisplayFor(m => m.SessionName, new { @class = "control-label", style = "font-weight:bold" })
                                }
                                else
                                {
                                    <b style="color:red;">@Html.DisplayFor(m => m.SessionName, new { @class = "control-label", style = "font-weight:bold" })</b>
                                }
                                <input type="hidden" id="academicYear" value="@Model.SessionName" />
                            </div>
                        </div>
                    </div>

                        <div class="col-sm-12">
                            <div class="col-sm-6">
                                <div class="form-group fg-line select">
                                    @Html.DropDownList("IsCurrentYearStudent", ViewData["IsCurrentYearStudent"] as List<SelectListItem>, new { @class = "form-control", style = "", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Student Type*" })
                                </div>
                                @Html.ValidationMessageFor(model => model.IsCurrentYearStudent)
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group fg-line">
                                    <div class="input-append">@Html.TextBoxFor(m => m.StudentName, new { @class = "form-control typeahead", placeholder = "Search Student" })</div>
                                </div>
                            </div>

                        </div>
                    </div>
            </div>
        </form>

</div>

    @Html.Partial("/Views/Student/StudentReadmission/StudentDetails.cshtml")

</div>



<script type="text/javascript">
    $(document).ready(function () {
        StudentReadmission.Initialize();
    });
</script>

















