@model AMS.ViewModel.StudentReadmissionViewModel
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<link href="@Url.Content("Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />

<div class="card" id="admDetails">

    <div class="card-body card-padding">
        <div class="block-header">
            <h5> @Resources.Headers_StudentDetails</h5>
            <hr />
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="col-sm-6">
                    @Html.LabelFor(m => m.BranchDescription, new { @class = "form-control", style = "font-weight:bold;" })
                    <div class="form-group">
                        @Html.DisplayFor(m => m.BranchDescription)
                    </div>
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(m => m.CourseYearDesc, new { @class = "form-control", style = "font-weight:bold;" })
                    <div class="form-group">
                        @Html.DisplayFor(m => m.CourseYearDesc)
                    </div>
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(m => m.SectionDesc, new { @class = "form-control", style = "font-weight:bold;" })
                    <div class="form-group">
                        @Html.DisplayFor(m => m.SectionDesc)
                    </div>
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(m => m.AcademicYear, new { @class = "form-control", style = "font-weight:bold;" })
                    <div class="form-group">
                        @Html.DisplayFor(m => m.AcademicYear)
                    </div>
                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(m => m.StudentCode, new { @class = "form-control", style = "font-weight:bold;" })
                    <div class="form-group">
                        @Html.DisplayFor(m => m.StudentCode)
                    </div>
                </div>

                @Html.HiddenFor(m => m.BranchId)
                @Html.HiddenFor(m => m.SectionDetailID)
                @Html.HiddenFor(m => m.CourseYearId)
                @Html.HiddenFor(m => m.StudentId)


            </div>


        </div>
    </div>

    <div class="card-body card-padding">
        <div class="block-header">
            <h5> @Resources.Headers_ReAdmitStudent</h5>
            <hr/>
        </div>
        
        <div class="row">
            <form class="">
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <div class="form-group fg-line dtp-container">
                            @Html.TextBoxFor(m => m.AdmissionDate, new { @class = "form-control input-sm", @style = "background-color: #ffffff;", @readonly = "readonly", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Admission Date*" })
                        </div>
                        @Html.ValidationMessageFor(m => m.AdmissionDate)
                    </div>

                    <div class="form-group">
                        <button type="button" id="CreateStudentReadmissionRecord" value="@Resources.ButtonAction_ReAdmit" class="btn btn-primary">@Resources.ButtonAction_ReAdmit</button>
                        <button name="" id="reset" type="button" class="btn btn-default" value="@Resources.ButtonAction_Reset">@Resources.ButtonAction_Reset</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>

