@model AMS.ViewModel.CRMReportViewModel
@Html.HiddenFor(m => m.MapArray, new { id="CallbackCallMapArray"})
<div class="col-sm-6 col-md-3">
    <div class="mini-charts-item bgm-red">
        <div class="clearfix">
            <div class="chart myBarClass-1"></div>
            <div class="count text-center">
                <small>Callback Calls</small>
                <h2>@Html.DisplayFor(m => m.CallbackCalls)</h2>
                <small>&nbsp;</small>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        sparklineBar('myBarClass-1', $("#CallbackCallMapArray").val().split(','), '45px', 3, '#fff', 2);
    });
</script>