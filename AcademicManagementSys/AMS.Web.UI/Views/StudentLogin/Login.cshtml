@model AMS.ViewModel.StudentLoginViewModel


@{
    ViewBag.Title = "Log in";
    // Layout = "~/Views/Shared/_LandingStudent.cshtml";
    Layout = null;
}
<html class=" js flexbox flexboxlegacy canvas canvastext webgl no-touch geolocation postmessage no-websqldatabase indexeddb hashchange history draganddrop websockets rgba hsla multiplebgs backgroundsize borderimage borderradius boxshadow textshadow opacity cssanimations csscolumns cssgradients no-cssreflections csstransforms csstransforms3d csstransitions fontface generatedcontent video audio localstorage sessionstorage webworkers applicationcache svg inlinesvg smil svgclippaths">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @HttpContext.Current.Session["ProjectName"] @Resources.DisplayName_InformationSystem</title>
    <link rel="shortcut icon" type="image/x-icon" href="../Content/images/favicon.ico">
    <script src="../Scripts/jquery/jquery-2.1.1.min.js" type="text/javascript"></script>
    <script src="../Scripts/jquery.validate.min.js" type="text/javascript"></script>
    <script src="../Scripts/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
    <link href="../Content/bootstrap.css" rel="stylesheet" />
    <link href="../Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="../Content/Theme/css/bootstrap-admin-theme.css" rel="stylesheet" />
    <link href="../Content/Theme/css/site.css" rel="stylesheet" />
    <link href="../Content/colorbox/colorbox.css" rel="stylesheet" type="text/css" />
    <script src="../Scripts/plugin/colorbox/jquery.colorbox.js" type="text/javascript"></script>
    <script src="../Scripts/modernizr-2.6.2.js"></script>
    <title>Student LogIn</title>
    <section class="social" id="socialLoginForm">
    </section>
    <style>
        .YourBackgroundClass {
            background: #fff;
            border-radius: 3px 3px;
            width: 300px;
            border: 1px solid #808080;
        }


        .ErrorMsg {
            color: #930707;
            font-size: 2px;
        }
    </style>
</head>
<body >
    <div class="container ">
        <div class="row" align="center">
            <section id="loginForm" style="float: right">
                <div class="bootstrap-admin-login-form" style="padding-top:0px">

                    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
                    {
                        <h2 style="text-align: left;color: #1b74e0;text-align:center">Student Login</h2>
                        <hr />
                        <div style="color: #ff0000; text-align: left;margin-left:14px" >
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true)

                           @Html.ValidationMessageFor(m => m.EmailID)
                        </div>
                         
                        <br />
                        <div class="form-group">
                            <div class="col-lg-4">
                                
                                @Html.TextBoxFor(m => m.EmailID, new { @class = "YourBackgroundClass", Placeholder = "Email-ID" })<br />
                            </div>
                            <div class="col-lg-10" style="color: #ff0000;">
                            </div>
                        </div>
                        <br />
                        <br />
           
                        <div class="form-group">
                            <div class="col-lg-4">

                                @Html.PasswordFor(m => m.Password, new { @class = "YourBackgroundClass", Placeholder = "Password" })<br />
                            </div>
                            <div class="col-lg-10" style="color: #ff0000; text-align: left; width: 350px;">
                                @Html.ValidationMessageFor(m => m.Password)

                            </div>
                        </div>
                        <br />
                        <br />          
                        <div class="col-lg-4">
                            <button class="btn btn-lg btn-block btn-primary " type="submit" value="Submit" style="height: 40px; width: 300px;">Sign In</button>
                             
                        </div>             
                        <br />
                        <br />
                  
                    }
                </div>
            </section>
        </div>
    </div>
</body>
</html>

<script>
    $(document).ready(function () {
        $(".ajax").colorbox();
     


    });
</script>