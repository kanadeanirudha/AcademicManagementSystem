                        @Html.LabelFor(model => model.AccBalsheetHeadDesc, new { })
                        @Html.TextBoxFor(m => m.AccBalsheetHeadDesc, new { maxlength = "50", @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.AccBalsheetHeadDesc)
