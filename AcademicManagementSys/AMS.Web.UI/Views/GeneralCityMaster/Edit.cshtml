@model AMS.ViewModel.GeneralCityMasterViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>

<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;@Resources.FormUpdate_City</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormEditGeneralCityMaster">

                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.ID)

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.SelectedCountryID, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownListFor(m => m.SelectedCountryID, (SelectList)ViewBag.GeneralCountryMaster, "---select Country---", new { @class = "form-control", style = "background-color:#fff;", disabled = "disabled" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SelectedCountryID)
                    </div>

                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.SelectedRegionID, new { style = "" })
                        <div class="form-group  fg-line select">
                            @Html.DropDownListFor(model => model.SelectedRegionID, (SelectList)ViewBag.GeneralRegionMaster, new { @class = "form-control", style = "background-color:#fff;", disabled = "disabled" })
                        </div>
                        @Html.ValidationMessageFor(model => model.SelectedRegionID)
                    </div>
                </div>

                <div class="col-sm-12">
                    <div class="col-sm-6">
                        @Html.LabelFor(model => model.Description, new { style = "" })
                        <div class="form-group  fg-line">
                            @Html.TextBoxFor(model => model.Description, new { maxlength = "100", @class = "form-control", disabled = "disabled", style = "background-color:#fff;" })
                        </div>
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    <div class="col-sm-6">
                        @if (Model.GeneralCityMasterDTO.DefaultFlag == true) { 
                        <div class="checkbox m-b-15" style="padding-top:8%;">
                            <label>
                                <input type="checkbox" id="DefaultFlag" checked>
                                <i class="input-helper"></i>
                                @Resources.DisplayName_MakeitDefault
                            </label>
                            @Html.ValidationMessageFor(model => model.DefaultFlag)
                        </div>
                        }
                        else { 
                        <div class="checkbox m-b-15" style="padding-top:8%;">
                            <label>
                                <input type="checkbox" id="DefaultFlag">
                                <i class="input-helper"></i>
                                @Resources.DisplayName_MakeitDefault
                            </label>
                            @Html.ValidationMessageFor(model => model.DefaultFlag)
                        </div>
                        
                        }
                    </div>
                </div>



                <div class="form-group" style="margin-left: 2%; ">
                    <input class="btn btn-primary btn-sm m-t-10 waves-effect" value="@Resources.ButtonAction_Submit" id="EditGeneralCityMasterRecord" type="button" />
                </div>
            </form>

        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralCityMaster.Initialize();
    });
</script>









