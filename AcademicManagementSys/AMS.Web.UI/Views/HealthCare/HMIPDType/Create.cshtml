@model AMS.ViewModel.HMIPDTypeViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Create IPD Type</h2>
    </div>
    <div class="card">
        <div id="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateHMIPDType">
                <div class="col-sm-6">
                        @Html.LabelFor(model => model.Name, new { })
                    <div class="form-group  fg-line">
                        @Html.TextBoxFor(model => model.Name, new { maxlength = "100", @class = "form-control input-sm" })
                    </div>
                        @Html.ValidationMessageFor(model => model.Name)
                  </div>
                <div class="col-sm-6">
                    <div class="form-group fg-line select">
                        @Html.LabelFor(model => model.Type, new { })
                        @Html.DropDownList("IPDType", ViewData["IPDType"] as List<SelectListItem>, "---Select IPD Type  ---", new { @class = "form-control input-sm" })
                    </div>
                    @Html.ValidationMessageFor(model => model.Type)
                </div>
                <div class="col-sm-12 m-t-30">
                    <input class=" btn btn-primary btn-sm m-t-12 waves-effect" value="@Resources.ButtonAction_Submit" id="CreateHMIPDTypeRecord" type="button" />
                </div>
            </form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        HMIPDType.Initialize();
    })
</script>
