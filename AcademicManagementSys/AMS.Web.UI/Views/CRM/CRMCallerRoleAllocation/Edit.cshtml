@model AMS.ViewModel.CRMCallerRoleAllocationViewModel
<form id="FormEditCRMCallerRoleAllocation" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(m => m.ID)

    <div id="update-message" class="error invisible"></div>

    <div class="widget-block" style="width: auto; height: auto;">
        <div class="widget-head">
            <h5>Deallocate Caller Role</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                <div class="control-group control-label row">
                    <div class="span">
                        <span class="black-icons info_about"></span>
                    </div>
                    <div class="span" style="margin-left:0%;">
                        @Html.Label("Do you want to de-activate the role?")
                    </div>
                </div>
                <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">
                    <input type="button" id="EditCRMCallerRoleAllocationRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                </div>

            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        CRMCallerRoleAllocation.Initialize();
    });
</script>
