@model AMS.ViewModel.CRMCallEnquiryDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Call Forward</h2>
     </div>
    <div class="card" style="margin-bottom: 0px;">
        @Html.HiddenFor(m => m.errorMessage)
        <form class="row" role="form">
            <div class="card-body card-padding">
                <div class="col-sm-3">
                    <div class="select form-group fg-line">
                          @Html.DropDownList("CallerJobStatus", ViewData["CallerJobStatus"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Caller Job Status*" })
                    </div>
                </div>
                <div class="col-sm-3" id="DivCallStatus" style="display:none;">
                    <div class="form-group fg-line select" data-original-title="CallStatus" data-val="true" title=""  data-toggle="tooltip" data-placement="top">
                        <select id="CallStatus" class="form-control input-sm"></select>
                   </div>
                </div>
                <div class="col-sm-3" style="margin-bottom:20px;">
                    <button type="button" class="btn btn-primary"  id="btnShowList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </div>
        </form>
    </div>
    <div id="ListViewModel">
         @{Html.RenderAction("List", "CRMCallEnquiryDetailsCallForward");}
    </div>
    <div class="card" style="margin-top: -30px;">
        <div class="card-body card-padding">
           <div class="" style="display: none;" id="DivSubmitRecord">
               <button type="button" class="btn btn-primary" id="CreateCRMCallEnquiryDetailsCallForwardRecord">@Resources.ButtonAction_Submit</button>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        CRMCallEnquiryDetailsCallForward.Initialize();
    });
</script>
<script src="~/Content/materialtheme/vendors/bower_components/typeahead.js/dist/typeahead.bundle.js"></script>
<script src="@Url.Content("~/Scripts/AMS_Scripts/CRM/CRMCallEnquiryDetailsCallForward.js")" type="text/javascript"></script>
