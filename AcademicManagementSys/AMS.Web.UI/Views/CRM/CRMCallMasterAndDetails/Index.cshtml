@model AMS.ViewModel.CRMCallMasterAndDetailsViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}

<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Job Processing</h2>

    </div>
    <div class="card" style="margin-bottom: 0px;">

        @Html.HiddenFor(m => m.errorMessage)
        <form class="row" role="form">
            <div class="card-body card-padding">
                <div class="col-sm-4">
                    <div class="select form-group fg-line">
                      @Html.DropDownListFor(model => model.SelectedJobID, (SelectList)ViewBag.CRMJobCreationMasterAndAllocation, "--Select Job--", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Job Name*" })
                    </div>
                </div>
                <div class="col-sm-4">
                    <div class="select form-group fg-line">
                       @Html.DropDownList("SelectedCallerJobStatus", ViewData["CallerJobStatus"] as List<SelectListItem>, new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Job Status*" })
                    </div>
                </div>

                
                <div class="col-sm-3" style="margin-bottom:20px;">
                    <button type="button" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </div>
        </form>

    </div>

    <div id="ListViewModel">

        @{Html.RenderAction("List", "CRMCallMasterAndDetails");}

    </div>
 </div>



<script type="text/javascript">
    $(document).ready(function () {
        CRMCallMasterAndDetails.Initialize();
    });
</script>

<script src="@Url.Content("~/Scripts/AMS_Scripts/CRM/CRMCallMasterAndDetails.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>
