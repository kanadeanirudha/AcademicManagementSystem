@model AMS.ViewModel.CRMCallEnquiryDetailsViewModel

<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

@Html.HiddenFor(model => model.ID)

<div id="update-message" class="error invisible"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5>View Details</h5>
    </div>

    <div class="widget-content">
        <form id="FormEditCRMCallEnquiryDetails" method="post" class="form-horizontal well">
            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">

                            @Html.LabelFor(model => model.CalleeFirstName, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">

                            @Html.TextBoxFor(model => model.CalleeFirstName, new { style = "font-Weight:Bold;", disabled = "Disabled" })
                        </div>
                        <div class="span1">

                            &nbsp;
                        </div>
                        <div class="span2">

                            &nbsp;
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">

                            @Html.LabelFor(model => model.CalleeMobileNo, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.CalleeMobileNo, new { style = "font-Weight:Bold;", disabled = "Disabled" })
                        </div>
                        <div class="span1">

                            @Html.LabelFor(model => model.CalleeEmailID, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @*@Html.DropDownListFor(model => model.PolicyAnswered, (SelectList)ViewBag.GeneralPolicyRules, "select", new { style = "font-Weight:Bold;", disabled="Disabled" })*@
                            @Html.TextBoxFor(model => model.CalleeEmailID, new { style = "font-Weight:Bold;", disabled = "Disabled" })

                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span8">
                    <div class="row control-group">
                        <div class="span1">

                            @Html.LabelFor(model => model.Status, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.Status, new { style = "font-Weight:Bold;", ReadOnly = "ReadOnly", disabled = "Disabled" })
                            <br />
                          
                        </div>
                        <div class="span1">

                            @Html.LabelFor(model => model.Source, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span2">
                            @Html.TextBoxFor(model => model.Source, new { style = "font-Weight:Bold;", ReadOnly = "ReadOnly" })
                            <br />
                        
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {
        CRMCallEnquiryDetails.Initialize();
    });

</script>



<style>
    .span {
        width: 25px;
        margin-top: 1%;
        margin-left: 60px;
    }

    .spana {
        width: 100px;
    }

    .span1 {
        width: 135px;
    }

    .span2 {
        width: 200px;
    }

    .hide_column {
        display: none;
    }

    .paging_full_numbers {
        display: none;
    }

    div.dataTables_paginate {
        display: none;
    }

    .dataTables_paginate {
        display: none;
    }

    div.dataTables_info {
        display: none;
    }

    .dataTables_info {
        display: none;
    }
</style>
