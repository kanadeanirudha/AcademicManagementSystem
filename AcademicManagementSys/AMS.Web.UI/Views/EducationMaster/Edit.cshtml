@model AMS.Web.UI.Models.EducationMaster.EducationMaster
@{
    ViewBag.Title = "Edit";
}


@Styles.Render("~/Content/Vendors")
@Html.Partial("_LeftMenu")

<div id='dlgEdit'>
    <div class="col-md-10">
        <div class="row">
            <div class="panel panel-default bootstrap-admin-no-table-panel">
                <div class="panel-heading">
                    <div class="text-muted bootstrap-admin-box-title">Education Master</div>
                </div>
                <div class="bootstrap-admin-no-table-panel-content bootstrap-admin-panel-content collapse in">
                    <form class="form-horizontal">
                        <fieldset>
                            <legend>Edit</legend>
                           
                            @using (Html.BeginForm())
                            {
                                @Html.ValidationSummary(true)
                                 @Html.HiddenFor(model => model.ID)

                                
                        <div class="form-group">
                            <label class="col-lg-2 control-label"> @Html.LabelFor(model => model.EducationType) </label>
                        <div class="col-lg-8">
                                <span class="">    @Html.DropDownList("Departments", new List<SelectListItem>
                                    { 
                                        new SelectListItem { Text = "Matriculation", Value = "1", Selected=true},
                                        new SelectListItem { Text = "Higher Secondary", Value = "2"},
                                        new SelectListItem { Text = "Diploma", Value = "3"},
                                        new SelectListItem { Text = "Graduation", Value = "4"}


                                    }) </span>
                        </div>
                        </div>
                                
                         <div class="form-group">
                            <label class="col-lg-2 control-label"> @Html.LabelFor(model => model.EducationDescription)</label>
                        <div class="col-lg-8">
                                <span class="">  @Html.EditorFor(model => model.EducationDescription) @Html.ValidationMessageFor(model => model.EducationDescription)</span>
                        </div>
                        </div> 
                                
                        <div class="form-group">
                            <label class="col-lg-2 control-label">@Html.LabelFor(model => model.CompletionPeriod)</label>
                        <div class="col-lg-8">
                                <span class=""> @Html.EditorFor(model => model.CompletionPeriod) @Html.ValidationMessageFor(model => model.CompletionPeriod)</span>
                        </div>
                        </div>   
                                
 
                        <div class="form-group">
                            <label class="col-lg-2 control-label">&nbsp;</label>
                        <div class="col-lg-8">
                                <span class=""> <button class="btn btn-sm btn-default">Save</button></span>
                        </div>
                        </div>   
                                   
                           <br />
                            }
                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<div>
    @Html.ActionLink("Back to List", "Index")

</div>