@model AMS.ViewModel.GeneralRunningNumbersForAccountViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 70%;
    }
</style>
<div class="container">
    <div class="block-header">
        <h2 style="text-transform: none;"><i class="zmdi zmdi-view-toc"></i>&nbsp;Running Numbers</h2>
    </div>
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-header" >
            <ul class="actions">
                <li class="dropdown">
                    <a href="" data-toggle="dropdown">
                        <i class="zmdi zmdi-more-vert"></i>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-right" id="divCardHeader" style="display:none">
                        <li>
                            <a class="mfpAjaxModal" title="Add New" href="@Url.Action("Create", "GeneralRunningNumbersForAccount")">
                                <i class="zmdi zmdi-plus-square"></i> &nbsp; Add New
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        <form class="row" role="form">
            <div class="card-body card-padding">
                <div class="col-sm-6">
                    <div class="select form-group fg-line">
                        @Html.DropDownListFor(model => model.CentreCode, Model.ListGetAdminRoleApplicableCentreItems,"---------Select Centre-------------", new { @class = "form-control input-sm", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Centre" })
                    </div>
                </div>
                <div class="col-sm-6" style="margin-bottom:0px;">
                    <button type="button" class="btn btn-primary" id="btnShowList">@Resources.GlobalProperties_ShowList</button>
                </div>
            </div>
        </form>
    </div>
    <div id="ListViewModel">
        @{Html.RenderAction("List", "GeneralRunningNumbersForAccount");}
    </div>
</div>

<script src="@Url.Content("~/Scripts/AMS_Scripts/GeneralMaster/GeneralRunningNumbersForAccount.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        GeneralRunningNumbersForAccount.InitAndValidateCentreList();
        GeneralRunningNumbersForAccount.Initialize();
    });
</script>
