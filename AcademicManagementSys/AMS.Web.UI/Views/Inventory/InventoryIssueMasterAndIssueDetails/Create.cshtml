@model AMS.ViewModel.InventoryIssueMasterAndIssueDetailsViewModel

<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
    .ui-front {
        z-index: 9999;
    }

    .ui-datepicker {
        font-size: 9pt !important;
    }
    .span1
    {
        width:150px;
    }
    
</style>

<div id="salesDiv">
    <div class="widget-block">
        <div class="widget-head">
            <h5>  Create Issue Master</h5>
        </div>
        <div id="msgDiv" style="display:none;color:#000;" class="alert"></div>
        <div class="widget-content">
            <div class="widget-box">
                <form class="form-horizontal well" id="FormCreateInventoryEstimationMasterAndDetails" style="">
                    <div class="nonboxy-widget">
                        <fieldset>
                            <div class="row">
                                <div class="span9">
                                </div>
                            </div>
                            <div class="row control-group">
                                <div class="span1">
                                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                    @Html.LabelFor(m => m.IssueFromLocationName, new { style = "font-Weight:Bold;" })
                                </div>
                                <div class="span2" style="line-height: 25px">
                                    @Html.DropDownListFor(m => m.IssueFromLocationID, (SelectList)ViewBag.GeneralLocationList, "-----Select from location-----", new { id = "FromLocationID", @class = "txtbox", style = "font-Weight:Bold;" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.IssueFromLocationID)
                                </div>

                                <div class="span1" style="margin-left: 10%">
                                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                    @Html.LabelFor(m => m.IssueToLocationName, new { style = "font-Weight:Bold;" })
                                </div>
                                <div class="span2" style="line-height: 25px">
                                    @Html.DropDownListFor(m => m.IssueToLocationID, (SelectList)ViewBag.GeneralLocationList, "-----Select upto location-----", new { id = "UptoLocationID", @class = "txtbox", style = "font-Weight:Bold;" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.IssueToLocationID)

                                </div>
                            </div>

                            <div class="row control-group">
                                <div class="span1">
                                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                                    @Html.LabelFor(m => m.TransactionDate, new { style = "font-Weight:Bold;" })
                                </div>
                                <div class="span2" style="line-height: 25px">
                                    @Html.TextBoxFor(model => model.TransactionDate, new { @class = "txtbox", maxlength = "100", style = "font-Weight:Bold; width:212px;", @placeholder = "Select Date" })
                                    <br />
                                    @Html.ValidationMessageFor(m => m.TransactionDate)
                                </div>
                            </div>

                            <hr />

                            <div class="row">
                                <div class="span9">
                                    <div class="row control-group">
                                        @Html.HiddenFor(m => m.ItemID)
                                        <div class="span">
                                            @Html.LabelFor(model => model.ItemName, new { Style = "font-size: 100%;font-weight:bold;" })
                                            @Html.TextBoxFor(model => model.ItemName, new { @class = "txtbox", style = "font-weight:bold; width:300px;" , @placeholder="Select item"})
                                        </div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.AvailbleQuantity, new { Style = "font-size: 100%;font-weight:bold;" })
                                            @Html.TextBoxFor(model => model.AvailbleQuantity, new { @class = "txtbox", Style = "width:70px;text-align:right;font-weight:bold; -webkit-text-fill-color: rgba(0, 0, 0, 0.5);", disabled = "disabled" })
                                        </div>
                                        <div class="spanFullName">
                                            @Html.LabelFor(model => model.IssueQuantity, new { Style = "font-size: 100%;font-weight:bold;" })
                                            @Html.TextBoxFor(model => model.IssueQuantity, new {maxlength = "8", @class = "txtbox", Style = "width:70px;text-align:right;font-weight:bold" })
                                        </div>
                                        <div class="spanFullName">
                                            <label for="input01">&nbsp;</label>
                                            <input type="button" id="addItem" class="btn btn-primary" style="height:28px" value="Add" />
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="span9">
                                    <div id="DivAddRowTable" style="height: 200px; overflow: auto">
                                        <table id="tblData" class="table user-tbl " style="  border: 1px solid #dddddd">
                                            <thead>
                                                <tr>
                                                    <th style="text-align: left; width: 50%">item</th>
                                                    <th style="text-align: left; width: 16%">quantity</th>
                                                    <th style="text-align: left; width: 16%">issue quantity</th>
                                                    <th style="text-align: center; width: 5px;">Action</th>
                                                </tr>
                                            </thead>
                                            <tbody></tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="span9">
                                    <div class="form-actions " style="border: 1px solid #e5e5e5;text-align:right">
                                        <input type="button" id="CreateInventoryIssueMasterAndIssueDetails" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        InventoryIssueMasterAndIssueDetails.Initialize();        
    })

</script>
