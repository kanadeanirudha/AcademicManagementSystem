@model AMS.ViewModel.InventoryCounterApplicableDetailsViewModel
<form id="FormCreateInventoryCounterApplicableDetails" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.InvCounterMasterID)
    @Html.HiddenFor(model => model.SelectedCentreCode)
    <div id="update-message" class="error invisible"></div>

    <div class="widget-block" style="width:auto; height:auto;">
        <div class="widget-head">
            <h5>Create Counter Applicable</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                <div class="control-group control-label">


                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>    @Html.LabelFor(model => model.CounterName, new { style = "font-Weight:Bold;" })


                    <div class="controls input-xlarge text-tip">
                        @Html.TextBoxFor(model => model.CounterName, new { maxlength = "60", ReadOnly = "True", style = "font-Weight:Bold;" })

                        <br />
                        @Html.ValidationMessageFor(model => model.CounterName)
                    </div>
                </div>


                <div class="control-group control-label">
                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>
                    @Html.LabelFor(model => model.MachineCode, new { style = "font-Weight:Bold;" })
                </div>
                <div class="controls input-xlarge text-tip">
                    @Html.DropDownListFor(m => m.MachineCode, Model.GetInventoryMachineCounterApplicableListItems, "----Select Machine Code----", new { style = "width:210px;font-Weight:Bold" })
                    <br />
                    @Html.ValidationMessageFor(model => model.MachineCode)

                </div>



                <div class="form-actions" style="border: 1px solid #e5e5e5;text-align:right">
                    <input type="button" id="CreateInventoryCounterApplicableDetailsRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                    @*<input name="" id="reset" type="submit" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />*@

                </div>

            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        InventoryCounterApplicableDetails.Initialize();
    });
</script>

