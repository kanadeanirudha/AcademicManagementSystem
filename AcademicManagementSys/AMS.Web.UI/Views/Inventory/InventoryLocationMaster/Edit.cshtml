@model AMS.ViewModel.InventoryLocationMasterViewModel
<form id="FormEditInventoryLocationMaster" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div id="update-message" class="error invisible"></div>
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.ID)

    <div class="widget-block" style="width: auto; height: auto;">
        <div class="widget-head">
            <h5>Update Inventory Item </h5>
        </div>

        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                <div class="control-group control-label">
                    @Html.LabelFor(model => model.LocationName, new { style = "font-Weight:Bold;" })

                    <div class="controls input-xlarge text-tip">
                        @Html.TextBoxFor(model => model.LocationName, new {style = "font-Weight:Bold;", maxlength = "50" })
                        <br />
                        @Html.ValidationMessageFor(model => model.LocationName)
                    </div>
                </div>
             

                <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">

                    <input type="button" id="EditInventoryLocationMasterRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />

                </div>

            </div>
        </div>

    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        InventoryLocationMaster.Initialize();
    });
</script>

