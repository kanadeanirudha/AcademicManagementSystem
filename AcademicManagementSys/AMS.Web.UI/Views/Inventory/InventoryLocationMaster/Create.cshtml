@model AMS.ViewModel.InventoryLocationMasterViewModel
<form id="FormCreateInventoryLocationMaster" method="post">
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.SelectedCentreCode)
    <div id="update-message" class="error invisible"></div>

    <div class="widget-block" style="width:auto; height:auto;">
        <div class="widget-head">
            <h5>Create Inventory Location</h5>
        </div>
        <div class="widget-content">
            <div class="widget-box" style="padding: 15px">

                <div class="control-group control-label">


                    <span style="color: red; float: left; padding-left: 1px; font-weight: bold">*</span>    @Html.LabelFor(model => model.LocationName, new { style = "font-Weight:Bold;" })


                    <div class="controls input-xlarge text-tip">
                        @Html.TextBoxFor(model => model.LocationName, new { maxlength = "60", style = "font-Weight:Bold;" })
                        <br />
                        @Html.ValidationMessageFor(model => model.LocationName)
                    </div>
                </div>
              
                @*<div class="control-group control-label">
                        @Html.LabelFor(model => model.SeqNo, new { style = "font-Weight:Bold;" })

                                <div class="controls input-xlarge text-tip">
                                    @Html.TextBoxFor(model => model.SeqNo, new { min = "0", type = "number" , Value="" })
                                    <br />
                                    @Html.ValidationMessageFor(model => model.SeqNo)
                                </div>
                    </div>*@



                <div class="form-actions" style="border: 1px solid #e5e5e5;text-align:right">
                    <input type="button" id="CreateInventoryLocationMasterRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                    <input name="" id="reset" type="submit" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />

                </div>

            </div>
        </div>
    </div>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        InventoryLocationMaster.Initialize();
    });
</script>

