@model AMS.ViewModel.InventorySalesMasterAndTransactionViewModel
<link href="@Url.Content("~/Content/jquery-ui.theme.css")" rel="stylesheet" type="text/css" />
<link href="@Url.Content("Content/admin/jquery-ui-1.css")" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<style>
    .ui-front {
        /*z-index:10000;*/
        z-index: 9999;
    }
    #widget-block {
        -moz-box-sizing: border-box;
        -ms-box-sizing: border-box;
        -webkit-box-sizing: border-box;
    }

</style>

<div id="update-message" class="error invisible"></div>
<div class="widget-block">
    <div class="widget-head">
        <h5>Payment </h5>
    </div>

    <div class="widget-content">
        <div id="SuccessMessagediv" style="display:none;color:#000;" class="alert"></div>
        <form id="FormCreateInventorySaleMaster" method="post" class="form-horizontal well">
           
            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            <span style="line-height: 10px"><b>Customer  &nbsp; &nbsp;&nbsp;</b></span>
                        </div>
                        <div class="span3">
                            @Html.HiddenFor(m => m.CustomerID)
                            @Html.TextBoxFor(model => model.CustomerName, new { @class = "txtbox", style = "font-weight:bold ; width:200px" })  
                        </div>
                        <div class="spanFullName span2">
                            <span style="line-height: 10px"><b>Contact No. &nbsp; &nbsp;&nbsp;</b></span>
                        </div>
                        <div class="span2">
                            
                            @Html.TextBoxFor(model => model.CustomerContactNo, new { @class = "txtbox", style = "font-weight:bold ; width:200px" })
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            @Html.LabelFor(model => model.CustomerType, new { style = "font-Weight:Bold;" })
                        </div>
                        <div class="span3">
                          @Html.DropDownList("CustomerType", ViewData["CustomerTypeList"] as List<SelectListItem>, new { @class = "input-xlarge text-tip", style = "font-weight:bold ; width:210px" })
                        </div>
                        <div class="spanFullName span2">

                            <span style="line-height: 10px"><b>Address &nbsp; &nbsp;&nbsp;</b></span>
                        </div>
                        <div class="span2">
                            @Html.TextAreaFor(model => model.CustomerAddress, new { @class = "txtbox", style = "font-weight:bold ; width:200px" })
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            <span style="line-height: 10px"><b>Payment &nbsp; &nbsp;&nbsp;</b></span>
                        </div>
                        <div class="span3">
                            @Html.TextBoxFor(model => model.PaymentByCustomer, new { @class = "txtbox", Value = "0", style = "font-weight:bold ; width:200px;text-align:right" })
                        </div>
                        <div class="spanFullName span2">

                            <span style="line-height: 10px"><b>Return Change&nbsp; &nbsp;&nbsp;</b></span>
                        </div>
                        <div class="span2">
                          @Html.TextBoxFor(model => model.ReturnChange, new { @class = "txtbox",Value="0", style = "font-weight:bold ; width:200px" ,disabled = "disabled"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="span9">
                    <div class="row control-group">
                        <div class="span">&nbsp;</div>
                        <div class="spanFullName span1">
                            <span style="line-height: 10px"><b>Gross Amount  &nbsp; &nbsp;&nbsp;</b></span>
                        </div>
                        <div class="span3">
                            <input type="text" style="width: 200px; font-weight: bold; height: 16px; text-align: right" disabled id="totalPayment"  value="0" />
                         </div>
                        <div class="spanFullName span2">
                           &nbsp;
                        </div>
                        <div class="span2">
                            &nbsp;
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions" style="border: 1px solid #e5e5e5; text-align: right">
                <input name="" id="ClosePayment" type="button" class="btn btn-secondary" value="Close" />
                <input type="button" id="CreateInventorySaleMaster" value="@Resources.ButtonAction_Submit" class="btn btn-primary  btn-success " />
            </div>
        </form>
    </div>
</div>

<script>   
    InventorySalesMasterAndTransaction.CustomerControlInitialization();
    InventorySalesMasterAndTransaction.PaymentFormInitialization();
</script>