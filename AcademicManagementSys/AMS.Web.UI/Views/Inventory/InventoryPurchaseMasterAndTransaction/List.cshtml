<style>
    .ui-front {
    /*z-index:10000;*/
    z-index:9999;
}

    .ui-datepicker {
        font-size: 9pt !important;
    }
    /* HOVER STYLES */
    div#pop-up {
        display: none;
        position: absolute;
        width: 150px;
        padding: 10px;
