<div class="container-fluid">


    <div id="purchaseDiv" style="display: none">
        <div class="widget-block">
            <div class="widget-head">
                <div style="float: left; padding-left: 5px; padding-top: 13px;">
                    <a href="#" id="trigger"><i class="black-icons info_about"></i></a>.
                    <div id="pop-up">
                        <div>
                            <p style="font-weight: bold;">Shortcut Keys</p>
                            <span style="color: #0088cc; font-weight: bold">Alt+A : </span><span style="">Purchase</span>
                            <br />
                            <span style="color: #0088cc; font-weight: bold">Alt+L : </span><span style="">List View</span>
                            <br />
                            <span style="color: #0088cc; font-weight: bold">Alt+X : </span><span style="">Reset Form</span>
                            <br />
                            <span style="color: #0088cc; font-weight: bold">Alt+R : </span><span style="">Add Row </span>
                            <br />
                        </div>
                    </div>
                    </div>
                    <h5>Purchase</h5>


                    <div class="pull-right" style="margin: -24px 60px 0px 10px;">
                        <b>Supplier Name : &nbsp; &nbsp;&nbsp;</b>
                        @Html.TextBoxFor(model => model.SupplierName, new { @class = "txtbox", style = "font-weight:bold ; width:200px" })
                        &nbsp; &nbsp;&nbsp;
                        <b>Bill Number : &nbsp; &nbsp;&nbsp;</b>
                        @Html.TextBoxFor(model => model.BillNumber, new { @class = "txtbox", style = "font-weight:bold ; width:100px" })
                        &nbsp; &nbsp;&nbsp;
                        <b>Location : &nbsp; &nbsp;&nbsp;</b>
                        @Html.DropDownListFor(m => m.LocationID, Model.LocationListItems, new { @class = "form-control chosen-select", style = "font-weight:bold;" })
                    </div>



                    <div class="pull-right" style="margin: -24px 30px 0px 10px;">
                        <div class="input-append" id="" style="float: right;">
                            <div class="widget-control pull-right">
                                <a href="#" id="closePurchase" data-toggle="dropdown" class="btn dropdown-toggle"><i class="icon-remove-sign"></i></a>
                            </div>
                        </div>
                    </div>
                </div>

            <div class="widget-content">
                <div class="widget-box">
                    <form class="form-horizontal well" id="FormCreateInventoryPurchaseMasterAndTransaction" style="width:1075px">
                        <div class="nonboxy-widget">
                            <fieldset>


                                <div class="row">

                                    <div class="span11">
                                        <div class="row control-group">
                                            @Html.HiddenFor(m => m.ItemID)
                                            @Html.HiddenFor(m => m.Isexpiry)
                                            @Html.HiddenFor(m => m.RoundUpAmount)
                                            <div class="span">
                                                @Html.LabelFor(model => model.ItemName, new { Style = "font-size: 100%;font-weight:bold;" })
                                                @Html.TextBoxFor(model => model.ItemName, new { @class = "txtbox", style = "font-weight:bold" })
                                            </div>

                                            <div class="spanFullName">
                                                @Html.LabelFor(model => model.Quantity, new { Style = "font-size: 100%;font-weight:bold;" })
                                                @Html.TextBoxFor(model => model.Quantity, new { maxlength = "8", @class = "txtbox", Style = "width:60px;text-align:right;font-weight:bold;margin-left: -5px;" })
                                            </div>
                                            <div class="spanFullName">
                                                @Html.LabelFor(model => model.UnitCode, new { Style = "font-size: 100%;font-weight:bold;" })
                                                @Html.TextBoxFor(model => model.UnitCode, new { @class = "txtbox", style = "width:60px;text-align:right;font-weight:bold;margin-left: -10px;  -webkit-text-fill-color: rgba(0, 0, 0, 0.5);", disabled = "disabled" })
                                            </div>
                                            <div class="spanFullName">
                                                @Html.HiddenFor(m => m.RateID)
                                                @Html.LabelFor(model => model.Rate, new { Style = "font-size: 100%;font-weight:bold ;margin-left: -20px;" })
                                                @Html.TextBoxFor(model => model.Rate, new { maxlength = "8", @class = "txtbox", style = "width:60px;text-align:right;font-weight:bold;margin-left: -10px;" })
                                            </div>
                                            <div class="spanFullName">
                                                @Html.HiddenFor(m => m.BatchID)
                                                @Html.HiddenFor(m => m.BatchQuantity)
                                                @Html.LabelFor(model => model.BatchNumber, new { Style = "font-size: 100%;font-weight:bold;margin-left: -10px;" })
                                                @Html.TextBoxFor(model => model.BatchNumber, new { @class = "txtbox", Style = "width:60px;text-align:right;font-weight:bold;margin-left: -10px;  -webkit-text-fill-color: rgba(0, 0, 0, 0.5);", disabled = "disabled" })
                                            </div>
                                            <div class="spanFullName">
                                                @Html.LabelFor(model => model.ExpiryDate, new { Style = "font-size: 100%;font-weight:bold;" })
                                                @Html.TextBoxFor(model => model.ExpiryDate, new { @class = "txtbox", @readonly = "readonly", Style = "width:85px;text-align:right;font-weight:bold;margin-left: -10px;  -webkit-text-fill-color: rgba(0, 0, 0, 0.5);", disabled = "disabled" })
                                            </div>
                                            <div class="spanFullName">
                                                @Html.LabelFor(model => model.IsRateInclusiveTax, new { Style = "font-size: 100%;font-weight:bold;margin-left: -27px;" })
                                                @Html.CheckBoxFor(model => model.IsRateInclusiveTax, new { style = "font-Weight:Bold;", disabled = "disabled" })
                                            </div>
                                            <div class="spanFullName">
                                                @Html.HiddenFor(m => m.taxpercentage)
                                                @Html.HiddenFor(m => m.GenTaxGroupMasterID)
                                               
                                                @Html.LabelFor(model => model.TaxRate, new { Style = "font-size: 100%;font-weight:bold ;margin-left: -10px;" })
                                                @Html.TextBoxFor(model => model.TaxRate, new { @class = "txtbox", style = "width:60px;text-align:right;font-weight:bold; margin-left: -10px;  -webkit-text-fill-color: rgba(0, 0, 0, 0.5);", disabled = "disabled" })
                                            </div>
                                            <div class="spanFullName">
                                               
                                                @Html.LabelFor(model => model.BillAmount, new { Style = "font-size: 100%;font-weight:bold ;" })
                                                @Html.TextBoxFor(model => model.BillAmount, new {maxlength = "12", @class = "txtbox", style = "width:100px;text-align:right;font-weight:bold; margin-left: -10px;  -webkit-text-fill-color: rgba(0, 0, 0, 0.5);", disabled = "disabled" })
                                            </div>

                                            <div class="spanFullName">
                                                <label for="input01">&nbsp;</label>
                                                <input type="button" id="addItem" class="btn btn-primary" style="height: 28px; margin-left: -10px; margin-right:0px" value="Add" />

                                            </div>
                                        </div>
                                    </div>

                                </div>

                                <div class="row">
                                    <div class="span11">
                                        <div id="DivAddRowTable">
                                            <table id="tblData" class="table user-tbl table-bordered" style="width:100%; border: 1px solid #dddddd">
                                                <thead>
                                                    <tr>
                                                        <th style="text-align: left; width: 30%">item</th>
                                                        <th style="text-align: left; width: 15%">Quantity</th>
                                                        <th style="text-align: left; width: 10%">Unit</th>
                                                        <th style="text-align: left; width: 10%;">Rate</th>
                                                        <th style="text-align: left; width: 17%;">Batch No</th>
                                                        <th style="text-align: left; width: 13%;">Tax Inclusive</th>
                                                        <th style="text-align: left; display:none;">TaxId</th>
                                                        <th style="text-align: left; width: 15%;">Tax</th>
                                                        <th style="text-align: left; width: 30%">Amount</th>
                                                        <th style="text-align: left; width: 20%">Total </th>
                                                        <th style="text-align: left; width: 5px;">Action</th>

                                                    </tr>
                                                </thead>
                                                <tbody></tbody>
                                            </table>
                                        </div>
                                    </div>

                                </div>
                                <div class="row">

                                    <div class="span11">
                                        <div class="form-actions " style="border: 1px solid #e5e5e5; text-align: right; width: 900px">

                                            <span style="float: left; margin-left: -150px; font-weight: bold;">
                                                Total Item:
                                                <input type="text" style="width: 50px; height: 16px; text-align: right; -webkit-text-fill-color: rgba(0, 0, 0, 0.5);" disabled id="TotalItem" />
                                            </span>
                                            <span style="float: left; margin-left: -15px; font-weight: bold;">
                                                Labour Charge:
                                                <input type="text" id="Hamali" maxlength="8" style="width: 70px; font-weight: bold; height: 16px; text-align: right" value="0" />
                                            </span>
                                            <span style="float: left; margin-left: 10px; font-weight: bold;">
                                                Other Expenses:
                                                <input type="text" id="OtherExpenses" maxlength="8" style="width: 70px; font-weight: bold; height: 16px; text-align: right" value="0" />
                                            </span>
                                            <span style="float: left; margin-left: 10px; font-weight: bold; display:none">
                                                Total Tax:
                                                <input type="text" style="width: 70px; font-weight: bold; height: 16px; text-align: right" disabled id="TotalBillAmountincludingTax" value="0" />
                                            </span>
                                            <span style="float: left; margin-left: 13px; font-weight: bold; ">
                                                Purchase Amount:
                                                <input type="text" style="width: 70px; font-weight: bold; height: 16px; text-align: right; -webkit-text-fill-color: rgba(0, 0, 0, 0.5);" disabled id="TotalBillAmount" value="0" />
                                            </span>
                                            <span style="float: left; margin-left: 4px; font-weight: bold;">
                                                Gross Amount :
                                                <input type="text" style="width: 70px; font-weight: bold; height: 16px; text-align: right; -webkit-text-fill-color: rgba(0, 0, 0, 0.5);" disabled id="TotalAmmount" value="0" />
                                            </span>
                                            <input type="button" id="CreateInventoryPurchasesAndTransaction" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                                            <input name="" id="reset" type="button" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />
                                        </div>
                                    </div>
                                </div>
                            </fieldset>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div id="listDiv">
        <div class="row-fluid">
            <div class="span12">
                <div class="widget-block">
                    <div style="display: none">@Html.ActionLink("Create New", "Create", new { id = 0 }, new { @class = "ajax", title = "Create" })</div>
                    <div class="widget-head">
