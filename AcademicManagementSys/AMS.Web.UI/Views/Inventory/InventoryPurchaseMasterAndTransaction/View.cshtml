@model AMS.ViewModel.InventoryPurchaseMasterAndTransactionViewModel

<div class="widget-block">
    <div class="widget-head">
        <h5>  View Purchase</h5>
    </div>
    <div class="widget-content">
        <div class="widget-box">
            <form class="form-horizontal well" id="FormViewPurchaseMasterAndTransaction" style="">
                @Html.HiddenFor(m => m.ID)
                <div class="nonboxy-widget">
                    <div class="row control-group">
                        <div class="span4">
                            <div class="pull-right" style="float:left">
                                <b>Supplier Name : &nbsp;</b>
                                @Model.SupplierName &nbsp;
                                <br />
                                <b>Bill Number : &nbsp;</b> 
                                @Model.BillNumber

                            </div>


                        </div>
                        <div class="span4" >
                            <div class="pull-right" style="float:right">
                                <b>Date : &nbsp;</b>
                                @Model.TransactionDate &nbsp;
                                <br />
                                <b>Bill Amount : &nbsp;</b>
                                &#x20B9;   @Math.Round(@Model.BillAmount, 2)

                            </div>
                           
                           
                        </div>



                    </div>


                    <fieldset>
                        <div class="row">
                            <div class="span8">
                                <div id="DivAddRowTable">
                                    <table id="tblData" class="table user-tbl " style="  border: 1px solid #dddddd">
                                        <thead>
                                            <tr>
                                                <th style="text-align: left; width: 40%">item</th>
                                                <th style="text-align: left; width: 10%">rate</th>
                                                <th style="text-align: left; width: 10%">unit</th>
                                                <th style="text-align: center; width: 20%">quantity</th>
                                            </tr>
                                        </thead>
                                        <tbody style="overflow: auto">

                                            @foreach (var item in Model.InventoryPurchaseMasterAndTransactionList)
                                            {
                                                <tr>
                                                    <td>@item.ItemName</td>
                                                    <td>@Math.Round(item.Rate, 2)</td>
                                                    <td>@item.UnitCode</td>
                                                    <td style="text-align:center">@Math.Round(@item.Quantity, 3)</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </fieldset>
                </div>
            </form>
        </div>
    </div>
</div>

