@model AMS.ViewModel.InventoryReportMasterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .widget-block {
        margin-bottom: -5px;
    }
</style>
<script src="@Url.Content("~/Scripts/AMS_Scripts/Inventory/InventoryDailyItemRateChangeReport.js")" type="text/javascript"></script>
@using (Html.BeginForm("Index", "InventoryDailyItemRateChangeReport", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.IsPosted)
    <div class="container-fluid">
        <ul class="breadcrumb">
            <li>Reports<span class="divider">»</span></li>
            <li>Daily Item Rate Change Report</li>
        </ul>
        <div id="SuccessMessage" style="display:none;color:#000;" class="alert"></div>
        <div class="">
            <div class="">
                <div class="widget-block">
                    <div class="widget-head">
                        <h5>Daily Item Rate Change Report</h5>
                    </div>
                    <div class="widget-content">
                        <div class="widget-box">
                            @Html.HiddenFor(m => m.IsPosted)
                            @Html.HiddenFor(m => m.AccountBalsheetMstID)
                            <fieldset>
                                <br />
                                <div class="control-group">

                                    <div class="span1">
                                        @Html.LabelFor(m => m.FromDate, new { @class = "control-label", style = "font-weight:bold" })
                                    </div>
                                    <div class="span2" style="line-height: 25px">
                                        @Html.TextBoxFor(m => m.FromDate, new { @class = "", style = "font-weight:bold" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.FromDate)
                                    </div>
                                    <div class="span1">
                                        <label class="control-label">&nbsp;</label>
                                    </div>
                                    <div class="span1">
                                        @Html.LabelFor(m => m.UptoDate, new { @class = "control-label", style = "font-weight:bold" })
                                    </div>

                                    <div class="span2" style="line-height: 25px">
                                        @Html.TextBoxFor(m => m.UptoDate, new { @class = "", style = "font-weight:bold" })
                                        <br />
                                        @Html.ValidationMessageFor(model => model.UptoDate)
                                    </div>
                                    <div class="span1">
                                        <input type="submit" name="submit" id="btnInventoryDailyItemRateChangeReportSubmit" class="btn-primary btn" style="margin-left:50px " value="Show" />
                                    </div>
                                </div>
                            </fieldset>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@if (System.Configuration.ConfigurationManager.AppSettings["IsInventoryHtmlReports"] == "0")
{
    <div class="container-fluid">
        <div class="row-fluid">
            <div id="aaa">
                <div class="span12" style="float: left">
                    <div class="widget-block">
                        <div class="widget-head">
                            <h5>Daily Item Rate Change Report</h5>
                        </div>
                        <div class="widget-content">
                            <div class="widget-box" style="padding: 15px">
                                @Html.Partial("/Views/Inventory/Report/InventoryDailyItemRateChangeReport/InventoryDailyItemRateChangeReport.aspx")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
}

@if (System.Configuration.ConfigurationManager.AppSettings["IsInventoryHtmlReports"] == "1")
{
    <div class="container-fluid">
        <div class="row-fluid">
            <div id="aaa">
                <div class="span12" style="float: left">
                    <div class="widget-block">
                        <div class="widget-head">
                            <h5>Daily Item Rate Change Report</h5>
                        </div>
                        <div class="widget-content">
                            <div class="widget-box" style="padding: 15px">
                                @Html.Partial("/Views/Inventory/Report/InventoryDailyItemRateChangeReport/List.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br />
    <br />
    <br />
}


<script type="text/javascript">
    $(document).ready(function () {
        InventoryDailyItemRateChangeReport.Initialize();
    });
</script>
