<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"]) != "" && Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ISProjectEnvoirnmentLengthLong"]) == "1")
    {
        <title>
            @Resources.ResourceManager.GetString(string.Concat(Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"])))
        </title>
    }
    else
    {
        <title>
            @if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"]) != "")
            {
                @Resources.ResourceManager.GetString(string.Concat(Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"])))
            }
            else
            {
                @Resources.ProjectEnvoirnment_BCS
            }
        </title>

    }
    @*<link rel="shortcut icon" type="image/x-icon" href="..//Content/images/favicon.ico">*@
    <link rel="shortcut icon" type="image/x-icon" href="..//Content/images/@Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectFaviconIcon"])">

    <link href="../Content/bootstrap.css" rel="stylesheet" />
    <link href="../Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="../Content/Theme/css/bootstrap-admin-theme.css" rel="stylesheet" />
    <link href="../Content/Theme/css/site.css" rel="stylesheet" />

    <script src="../Scripts/modernizr-2.6.2.js"></script>

    @* @Styles.Render("~/Content/Theme")
        @Scripts.Render("~/bundles/modernizr")  *@
    @* <link href="@Url.Content("~/Content/colorbox/colorbox.css")" rel="stylesheet" type="text/css" /> *@
    @*<script  src="@Url.Content("~/Scripts/plugin/colorbox/jquery.colorbox.js")" type="text/javascript"></script>*@
    <!-- Custom styles -->
    <style type="text/css">
        .alert {
            margin: 0 auto 20px;
        }
    </style>

</head>

@if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"]) != "")
{
    <body style="background: url('../Content/images/@Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["LangingPageImage"])'); background-repeat: no-repeat; background-size: cover;font-family:'Microsoft Sans Serif'">


        @*   <img src="~/Content/images/AMS_Wallpaper.jpg" />*@
        <!--Top Navigation Start -->
        @* @Html.Partial("_FISLandingHeader")*@

        <!--Top Navigation End -->
        @if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["LandingPage_Image_OR_Name_OR_Both_OR_None"]) == "None")
        {
            <div class="" style="margin-bottom: 130px;padding: 15px;">
            </div>
        }
        else
        {
            <div class="alert" style="text-align: center; font-size: x-large; background-color: #FFF; opacity: 0.9; color: #1b74e0; font-weight: BOLD; font-size: 28px;">
                @if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["LandingPage_Image_OR_Name_OR_Both_OR_None"]) == "Name")
                {
                    @Resources.ResourceManager.GetString(string.Concat(Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"])))
                }
                else if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["LandingPage_Image_OR_Name_OR_Both_OR_None"]) == "Image")
                {
                    <span>
                        <img src="../Content/images/@Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectLogo"])" />
                    </span>
                }
                else if (Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["LandingPage_Image_OR_Name_OR_Both_OR_None"]) == "Both")
                {
                    <span>
                        <img src="../Content/images/@Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectLogo"])" />
                    </span>
                    @Resources.ResourceManager.GetString(string.Concat(Convert.ToString(System.Configuration.ConfigurationManager.AppSettings["ProjectEnvoirnment"])))
                }

            </div>
        }
        <div class="container">
            @RenderBody()
        </div>

        <script src="../Scripts/jquery-2.1.1.js"></script>

        <script src="../Scripts/bootstrap.js"></script>
        <script src="../Scripts/twitter-bootstrap-hover-dropdown.js"></script>
        @RenderSection("scripts", required: false)

    </body>
}

else
{
    <body style="background: url('../Content/images/CoverPage-BCS.jpg'); background-repeat: no-repeat; background-size: cover; font-family: 'Microsoft Sans Serif'">


        @*   <img src="~/Content/images/AMS_Wallpaper.jpg" />*@
        <!--Top Navigation Start -->
        @* @Html.Partial("_FISLandingHeader")*@

        <!--Top Navigation End -->

        <div class="alert" style="text-align: center; font-size: x-large; background-color: #FFF; opacity: 0.9; color: #1b74e0; font-weight: BOLD; font-size: 28px;">
            @* @Resources.AppName*@
            @Resources.ProjectEnvoirnment_BCS
        </div>
        <div class="container">
            @RenderBody()
        </div>

        <script src="../Scripts/jquery-2.1.1.js"></script>

        <script src="../Scripts/bootstrap.js"></script>
        <script src="../Scripts/twitter-bootstrap-hover-dropdown.js"></script>
        @RenderSection("scripts", required: false)

    </body>
}
</html>
