    <script type="text/javascript">
        $(document).ready(function () {
            AMSValidation.Initialize();

            $(function () {

                setNavigation();
            });

            $(".main-menu li ul").hide();

            function setNavigation() {

                var href = '';
                var path = window.location.pathname;

                $(".main-menu li ul li a").each(function () {

                    href = $(this).attr("href");
                    if (path === href) {

                        $(this).closest('li ul li a').addClass('active');

                        $(this).closest("ul").css("display", "block");
                        $(this).closest("ul li.sub-menu").addClass("toggled");        
                    }
                });

            }

            $('#NotiCountHeaderDiv').click(function () {
                $.ajax(
               {
                   cache: false,
                   type: "POST",
                   dataType: "html",
                   url: '/Home/NotificationListV2',
                   //  url: '/Home/Index',
                   success: function (data) {
                       //Rebind Grid Data
                       $('#content').html(data);
                   }
               });
            });

        });
    </script>



