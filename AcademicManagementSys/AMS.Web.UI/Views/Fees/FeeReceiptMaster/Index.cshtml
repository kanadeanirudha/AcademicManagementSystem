@model AMS.ViewModel.FeeReceiptMasterViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutV2.cshtml";
}
<style type="text/css">
    .mfp-content {
        width: 70%;
    }

    .radio, .checkbox {
        display: block;
        margin-bottom: 10px;
        margin-top: 10px;
        position: static;
    }

    .btn-float {
        border-radius: 50%;
        height: 35px;
        line-height: 30px !important;
        width: 35px;
    }
</style>
<script src="@Url.Content("~/Scripts/jquery.validate-1.15.0.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<div id="ListViewModel" class="container">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp;Fee Receipt</h2>
    </div>
    <form id="FormCreateFeeReceiptMaster" class="row" role="form">
        @Html.HiddenFor(m => m.StudentID)
        <div class="card">
            <div class="card-body card-padding" style="padding-bottom: 10% !important;">
                <div id="displayErrorMessage" role="alert" hidden class="alert">
                    <button class="close" type="button"><span aria-hidden="true">×</span></button>
                    <p id="messageContent"></p>
                </div>
                <div class="col-sm-12">
                    <div class="form-group fg-line">
                        @Html.LabelFor(model => model.StudentName, new { })
                        @Html.TextBoxFor(m => m.StudentName, new { maxlength = "60", @class = "form-control input-sm typeahead", @placeholder = "Search Student" })
                    </div>
                    @Html.ValidationMessageFor(model => model.StudentName)
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-header">
                <div class="media">
                    <div class="pull-left">
                        <img id="imgStuPhoto" alt="" src="~/Content/materialtheme/img/login.png" class="lv-img">
                    </div>
                    <div class="media-body m-t-5">
                        <h2 id="stuName">Student Name<small id="stuEmailID">Email-Id</small></h2>
                    </div>
                </div>
            </div>
            <div class="card-body card-padding" style="padding-bottom: 5% !important;">
                <div id="displayMessageBankValidation" role="alert" hidden class="alert">
                    <button class="close" type="button"><span aria-hidden="true">×</span></button>
                    <p id="messageContent"></p>
                </div>
                <div class="row">
                    <div class="col-sm-6 m-b-20">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="badge" id="stuAcadYear"></span>
                                Academic Year
                            </li>
                            <li class="list-group-item">
                                <span class="badge" id="stuCourse"></span>
                                Course
                            </li>
                            <li class="list-group-item">
                                <span class="badge" id="stuSection"></span>
                                Section
                            </li>
                            <li class="list-group-item">
                                <span class="badge" id="stuAdmissionPattern"></span>
                                Admission Pattern
                            </li>
                        </ul>
                    </div>

                    <div class="col-sm-6 m-b-20">
                        <ul class="list-group">
                            <li class="list-group-item">
                                <span class="badge" id="stuEnrollNumber"></span>
                                Enrollment Number
                            </li>
                            <li class="list-group-item">
                                <span class="badge" id="stuStdNumber"></span>
                                Standard Number
                            </li>
                            <li class="list-group-item">
                                <span class="badge" id="stuAdmitAcadYear"></span>
                                Admit Academic Year
                            </li>
                            <li class="list-group-item">
                                <span class="badge" id="stuGender"></span>
                                Gender
                            </li>
                        </ul>
                    </div>
                </div>

                <div class="col-sm-6 m-b-20">
                    <div data-ts-color="blue" class="toggle-switch">
                        <label class="ts-label" for="ts3">Payment By Cheque/DD</label>
                        <input type="checkbox" id="ts3">
                        <label class="ts-helper" for="ts3"></label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label" for="inputEmail3">Deposite Account</label>
                    <div class="col-sm-4" style="margin-top:-1%">
                        <div class="fg-line select">
                            @Html.DropDownListFor(m => m.AccountID, Model.AccountListItems, "----------------------Select Account--------------------------", new { maxlength = "60", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.AccountID)
                    </div>
                </div>

                <div id="divBankDetails">
                    <div class="col-sm-12">
                        <div class="form-group  fg-line">
                            @Html.LabelFor(model => model.FeeBankName, new { })
                            @Html.TextBoxFor(m => m.FeeBankName, new { maxlength = "60", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.FeeBankName)
                    </div>

                    <div class="col-sm-12">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.BranchName, new { })
                            @Html.TextBoxFor(m => m.BranchName, new { maxlength = "60", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.BranchName)
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group  fg-line">
                            @Html.LabelFor(model => model.BranchCity, new { })
                            @Html.TextBoxFor(m => m.BranchCity, new { maxlength = "60", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.BranchCity)
                    </div>

                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.FeeChequeOrDDNumber, new { })
                            @Html.TextBoxFor(m => m.FeeChequeOrDDNumber, new { maxlength = "60", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.FeeChequeOrDDNumber)
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group  fg-line">
                            @Html.LabelFor(model => model.FeeChequeOrDDDate, new { })
                            @Html.TextBoxFor(m => m.FeeChequeOrDDDate, new { maxlength = "60", @class = "form-control input-sm ", @readonly = "readonly", @style = "background-color: #ffffff;" })
                        </div>
                        @Html.ValidationMessageFor(model => model.FeeChequeOrDDDate)
                    </div>
                    <div class="checkbox m-b-15" style="padding-top:32%;margin-left:2%">
                        <label>
                            <input type="checkbox" id="IschequeORDD" value="">
                            <i class="input-helper"></i>
                            Is payment by cheque ?
                        </label>
                    </div>
                </div>
            </div>

        </div>
        <div class="card" id="divReceiptDetails">
            <div class="card-body card-padding">
                <div class="card-body card-padding" style="padding-bottom: 10% !important;">
                    <div id="displayMessage" role="alert" hidden class="alert">
                        <button class="close" type="button"><span aria-hidden="true">×</span></button>
                        <p id="messageContent"></p>
                    </div>
                    <div class="col-sm-12" style="margin-bottom:3%">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.ReceiptAmount, new { })
                            @*<span style="margin-left:86%">
                                <button id="btnDistributePayment" title="Add" class="btn bgm-blue btn-float waves-effect waves-circle waves-float" type="button">
                                    <i class="zmdi zmdi-plus"></i>
                                </button>
                            </span>*@
                            @Html.TextBoxFor(m => m.ReceiptAmount, new { maxlength = "60", @class = "form-control input-sm " })
                        </div>

                        @Html.ValidationMessageFor(model => model.ReceiptAmount)
                    </div>

                    <div id="divStudentPaymentDetails" style="border: 1px solid; border-color: #EDECEC; margin-bottom: 3%; margin-left: 2%; margin-right: 2%; " class="table-responsive"></div>
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            @Html.LabelFor(model => model.ReceiptDate, new { })
                            @Html.TextBoxFor(m => m.ReceiptDate, new { maxlength = "60", Value = "" + @DateTime.Now + "", @disabled = "disabled", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.ReceiptDate)
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group  fg-line">
                            @Html.LabelFor(model => model.LateFeeAmount, new { })
                            @Html.TextBoxFor(m => m.LateFeeAmount, new { maxlength = "60", @class = "form-control input-sm " })
                        </div>
                        @Html.ValidationMessageFor(model => model.LateFeeAmount)
                    </div>
                </div>
                <div class="form-group" style="padding-left:4%">
                    <button type="button" id="CreateFeeReceiptMasterRecord" class="btn btn-primary">@Resources.ButtonAction_Submit</button>
                </div>
            </div>
        </div>
    </form>
</div>

<script src="@Url.Content("~/Scripts/AMS_Scripts/Fees/FeeReceiptMaster.js")" type="text/javascript"></script>
<script src="~/Content/materialtheme/vendors/bower_components/typeahead.js/dist/typeahead.jquery.js"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/moment/min/moment.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Content/materialtheme/vendors/bower_components/eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js")" type="text/javascript"></script>

<script type="text/javascript">
    $(document).ready(function () {
        FeeReceiptMaster.Initialize();
    });
    $(document).ajaxStart(function () {
        debugger;
        $('.page-loader').css('display', 'block');
        //$(".page-loader").removeAttr('style').css("background", "none repeat scroll 0 0 ");
        //$('.page-loader').css('style', 'background:none repeat scroll 0 0 !important');
     
    });
    $(document).ajaxStop(function () {

        $('.page-loader').css('display', 'none');
      

    });
</script>
