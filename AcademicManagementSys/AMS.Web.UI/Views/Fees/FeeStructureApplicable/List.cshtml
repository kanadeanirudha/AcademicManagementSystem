@model AMS.ViewModel.FeeStructureApplicableViewModel
<script src="@Url.Content("~/Scripts/fnReloadAjax.js")" type="text/javascript"></script>
<div class="block-header">
    <h2><i class="zmdi zmdi-view-toc"></i>&nbsp;Fee Structure Allocation</h2>
</div>
<div id="listViewDiv">
    <div class="card" style="margin-bottom: 0px;">
        <div class="card-body card-padding">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group fg-line select">
                        @Html.DropDownListFor(m => m.SelectedFeeCriteriaMasterID, Model.ListGetFeeCriteriaItems, new { disabled = "disabled", @class = "form-control", data_val = "true", data_toggle = "tooltip", data_placement = "top", data_original_title = "Criteria" })
                        @Html.HiddenFor(m => m.FeeStructureMasterID)
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="card" style="margin-top:0px;">
        <div class="card-body card-padding">
            <div class="row">
                <div class="bootgrid-header container-fluid" id="data-table-command-header">
                    <div class="row">
                        <div class="col-sm-12 actionBar">
                            <div class="search form-group">
                                <div class="input-group">
                                    <span class="zmdi icon input-group-addon glyphicon-search"></span>
                                    <input type="text" id="UserSearch" placeholder="Search" class="search-field form-control">
                                </div>
                            </div>
                            <div class="actions btn-group">
                                <div class="dropdown btn-group">
                                    <button data-toggle="dropdown" type="button" class="btn btn-default dropdown-toggle">
                                        <span class="dropdown-text" id="tblDisplayRowLength">10</span> <span class="caret"></span>
                                    </button>
                                    <ul role="menu" style="cursor:pointer" id="showrecords" class="dropdown-menu pull-right">
                                        <li class="active" aria-selected="true">
                                            <a class="dropdown-item dropdown-item-button" data-action="10">10</a>
                                        </li>
                                        <li aria-selected="false">
                                            <a class="dropdown-item dropdown-item-button" data-action="25">25</a>
                                        </li>
                                        <li aria-selected="false">
                                            <a class="dropdown-item dropdown-item-button" data-action="50">50</a>
                                        </li>

                                    </ul>
                                </div>
                                <div class="dropdown btn-group">
                                    <button data-toggle="dropdown" type="button" title="Screen Selection" class="btn btn-default dropdown-toggle" aria-expanded="false">
                                        <span class="dropdown-text">
                                            <span class="zmdi icon zmdi-view-module"></span>
                                        </span> <span class="caret"></span>
                                    </button>
                                    <ul role="menu" id="toggleTableColumn" class="dropdown-menu pull-right">
                                        <li>
                                            <div class="checkbox">
                                                <label class="dropdown-item" aria-disabled="false">
                                                    <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="0" name="StudentName">
                                                    Fee Structure<i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="checkbox">
                                                <label class="dropdown-item" aria-disabled="false">
                                                    <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="1" name="MobileNo">Fee Amount<i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="checkbox">
                                                <label class="dropdown-item" aria-disabled="false">
                                                    <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="2" name="EmailID"> Installment Applicable<i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="checkbox">
                                                <label class="dropdown-item" aria-disabled="false">
                                                    <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="3" name="Status">Allocation Status<i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </li>
                                        <li>
                                            <div class="checkbox">
                                                <label class="dropdown-item" aria-disabled="false">
                                                    <input type="checkbox" checked="checked" class="dropdown-item-checkbox" value="4" name="Source"> Action<i class="input-helper"></i>
                                                </label>
                                            </div>
                                        </li>
                                        
                                    </ul>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

                <table id="myDataTable" class="table table-striped table-vmiddle table-responsive ">
                    <thead>
                        <tr>
                            <th>Fee Structure</th>
                            <th style='text-align: center;'>Fee Amount</th>
                            <th style='text-align: center;'>Installment Applicable</th>
                            <th style='text-align: center;'>@Resources.TableHeaders_AllocationStatus</th>
                            <th style='text-align: center;'>@Resources.TableHeaders_Action</th>
                        </tr>
                    </thead>
                </table>

            </div>
        </div>
    </div>
</div>
<div id="structListDiv" style="display:none">
    @Html.Partial("~/Views/Fees/FeeStructureApplicable/FeeStructure.cshtml")
</div>
<script type="text/javascript">
    $(document).ready(function () {
        FeeStructureApplicable.LoadDatatable();
        FeeStructureApplicable.Initialize();
        $("#SelectedFeeCriteriaMasterID").tooltip();
        FeeStructureApplicable.ShowFeeStructureDetails();
        $(window).scroll(scrollHandler)
    });
</script>
