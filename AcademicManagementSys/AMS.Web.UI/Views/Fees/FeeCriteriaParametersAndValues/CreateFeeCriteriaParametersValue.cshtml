<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;@Resources.DisplayName_CreateFeeCriteriaParameterValue</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form class="row" id="FormCreateFeeCriteriaParameterValue" method="post">
                @Html.HiddenFor(model => model.FeeCriteriaParametersID)

                
                <p class="f-500 m-b-20 c-black">@Html.LabelFor(model => model.FeeCriteriaParametersDescription, new { style = "display: initial;" }) :  @Html.DisplayFor(model => model.FeeCriteriaParametersDescription, new { style = "float:left;" })</p>

                <div class="col-sm-12">
                    <div style="border: 1px solid; border-color: #EDECEC" class="table-responsive">
                        <table id="tblFeeCriteriaParametersValues" class="table table-bordered">
                            <thead>
                                <tr style="border-bottom:0" class="">
                                    <th><input id="selectAllParmeterValueID" type="checkbox" /><span class="selectAll">&nbsp;&nbsp;Select all</span></th>
                                    <th style="text-align: center;">Parameters for @Model.FeeCriteriaParametersDescription</th>

                                </tr>
                            </thead>
                            <tbody style="overflow: scroll">
                                @if (Model.PredefinedCriteriaParametersValueList != null)
                                {
                                    foreach (var data in Model.PredefinedCriteriaParametersValueList)
                                    {
                                        <tr>
                                            <td style="text-align: left;">
                                                @if (data.StatusFlag == true)
                                                {
                                                    <input class="checkbox" value="" type="checkbox" disabled="disabled" checked="checked" id="chkRow_1" /><i class="input-helper"></i>
                                                }
                                                else
                                                {
                                                    <input type="checkbox" class="abc1 checkbox" value="@data.FeeCriteriaParametersValuesID~@data.FeeCriteriaParameterValue" id="chkRow_1" /><i class="input-helper"></i>
                                                }
                                            </td>
                                            <td>@data.FeeCriteriaParameterValue</td>
                                        </tr>
                                    }
                                }
                            </tbody>

                        </table>
                    </div>
                </div><br/>
                    <div class="form-group col-sm-12" style="margin-left:1%">
                        <input type="button" id="CreateFeeCriteriaParameterValueRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />
                    </div>

            </form>
        </div>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function () {
        FeeCriteriaParametersAndValues.Initialize();
    });
</script>

