                        <th style="text-align: center;">@Resources.TableHeaders_Action</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>




<script type="text/javascript">

    $(document).ready(function () {
        var oTable;
        FeeCriteriaParametersAndValues.Initialize();
        var a = null;
        oTable = $('#myDataTable').DataTable({
            "bServerSide": true,
            "sAjaxSource": "FeeCriteriaParametersAndValues/AjaxHandler",
            "bJQueryUI": true,
            "sScrollY": false,
            "bProcessing": true,
            "sPaginationType": "full_numbers",
            "oLanguage": {
                "sInfoEmpty": "No entries to show",
            },


            "columnDefs": [

                {
                    "visible": true, "targets": 0,
                    "data": null,
                    "render": function (data, type, full, meta) {
                        if (data[3] != 0) {
                            var result = "<p  style=''>" + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; " + data[1] + "</p>";
                            return result;
                        }
                        else {
                            return null;
                        }
                    }
                },

                {
                    "targets": 1,
                    "bSortable": false,
                    "data": null,
                    "render": function (data, type, full, meta) {

                        if (data[3] != 0) {
                            var result = null;
                            result = " <a  href=\"javascript:void(0);\"  data-toggle=\"tooltip\" title=\"Delete Criteria Parameter Value\" class=\"btn btn-default waves-effect\" onclick=\"fancyBoxPopUpAjax('Delete Criteria Parameter Value','Do you want to Delete Criteria Parameter Value?','error','btn-danger 2.','Yes!','/FeeCriteriaParametersAndValues/DeleteFeeCriteriaParameterValue?feeCriteriaParametersValueID=" + data[3] + "','content','page-loader','FeeCriteriaParametersAndValues')\"><span class=\"zmdi zmdi-delete waves-effect\"></span></a>";
                            var result1 = "<p  style='text-align:center;'>" + result + "</p>";
                            return result1;

                        }
                        else {
                            return null;
                        }
                    }
                }
            ],
            "drawCallback": function (settings) {

                var api = this.api();
                var rows = api.rows({ page: 'current' }).nodes();
                var last = null;
                var table = $('#myDataTable').dataTable();
                var selectedBalncesheet = $("#selectedBalsheetID").val();
                api.column(0, { page: 'current' }).data().each(function (group, i) {
                    var array = String(group).split(',');
                    if (last !== array[0]) {

                        $(rows).eq(i).before(
                            '<tr class="group"><td style="font-weight:bold;background-color:rgba(128,128,128,0.2);color:#000;font-size:12px;font-family: verdana;">' + array[0] +
                            '</td><td style="text-align:center;font-weight:bold;background-color:rgba(128,128,128,0.2);color:#000;font-size:12px;font-family: verdana;"><a type="button" class="mfpAjaxModal btn" href="/FeeCriteriaParametersAndValues/CreateFeeCriteriaParametersValue?feeCriteriaParametersDetails=' + array[0].replace(/ /g, '~') + ":" + array[2] + '"><i style="color:black;" class="zmdi zmdi-plus" title="@Resources.ToolTip_Create"></i></a> <a href="javascript:void(0);" type="button" class="btn" onclick="fancyBoxPopUpAjax(\'Delete Fee Criteria Parameters\',\'Do you want to Delete Fee Criteria Parameters?\',\'error\',\'btn-danger 2.\',\'Yes!\',\'/FeeCriteriaParametersAndValues/DeleteFeeCriteriaParameter?feeCriteriaParametersID=' + array[2] + '\',\'content\',\'page-loader\',\'FeeCriteriaParametersAndValues\')"  ><i style="color:black;" class="zmdi zmdi-delete waves-effect" title="@Resources.DisplayName_DeleteCriteriaParameter"></i></a></td></tr>'
                        );
                        (
                            '<tr class="group"><td style="font-weight:bold;background-color:rgba(128,128,128,0.2);color:#000;font-size:12px;font-family: verdana;">' + array[1] +
                            '</td><td style="text-align:center;font-weight:bold;background-color:rgba(128,128,128,0.2);color:#000;font-size:12px;font-family: verdana;"><a type="button" class="mfpAjaxModal btn" href="/FeeCriteriaParametersAndValues/CreateFeeCriteriaParametersValue?feeCriteriaParametersDetails=' + array[0].replace(/ /g, '~') + ":" + array[2] + '"><i style="color:black;" class="zmdi zmdi-plus" title="@Resources.ToolTip_Create"></i></a> <a href="javascript:void(0);" type="button" class="btn" onclick="fancyBoxPopUpAjax(\'Delete Fee Criteria Parameters\',\'Do you want to Delete Fee Criteria Parameters?\',\'error\',\'btn-danger 2.\',\'Yes!\',\'/FeeCriteriaParametersAndValues/DeleteFeeCriteriaParameter?feeCriteriaParametersID=' + array[2] + '\',\'content\',\'page-loader\',\'FeeCriteriaParametersAndValues\')"  ><i style="color:black;" class="zmdi zmdi-delete waves-effect" title="@Resources.DisplayName_DeleteCriteriaParameter"></i></a></td></tr>'
                        );
                       
                        last = array[0];
                    }
                });
            }
        });
        DataTableSettings(oTable, "myDataTable", "toggleTableColumn");
    });


</script>
