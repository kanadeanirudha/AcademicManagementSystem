@model AMS.ViewModel.FeeCriteriaParametersAndValuesViewModel
<div id="custom-content">
    <div class="block-header">
        <h2>&nbsp;<i class="zmdi zmdi-view-toc"></i>&nbsp; &nbsp;@Resources.DisplayName_CreateFeeCriteriaParameter</h2>
    </div>
    <div class="card">
        <div class="card-body card-padding">
            <div id="displayErrorMessage" role="alert" hidden class="alert">
                <button class="close" type="button"><span aria-hidden="true">×</span></button>
                <p id="messageContent"></p>
            </div>
            <form id="FormCreateFeeCriteriaParameter" role="form" class="row">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                @Html.HiddenFor(model => model.FeeCriteriaParametersID)
                
                <div class="col-sm-12">
                    <div class="col-sm-6">
                        <div class="form-group fg-line select">
                            <label><span style="color:red">*</span>@Html.LabelFor(model => model.FeeCriteriaParametersDescription)</label>
                            @Html.DropDownListFor(model => model.FeeCriteriaParametersDescription, Model.GetPredefinedCriteriaParametersListItems, "----Select Criteria----", new { @class="form-control" })
                        </div>
                       @Html.ValidationMessageFor(model => model.FeeCriteriaParametersDescription)
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group fg-line">
                            <label>@Html.LabelFor(model => model.RelatedWith)</label>
                            @Html.TextBoxFor(model => model.RelatedWith, new { maxlength = "15", @class = "form-control" })
                        </div>

                    </div>
                </div>

                <div class="form-group col-sm-12" style="margin-left:1%">
                    <input type="button" id="CreateFeeCriteriaParameterRecord" value="@Resources.ButtonAction_Submit" class="btn btn-primary" />&nbsp;
                    <input name="" id="reset" type="submit" class="btn btn-secondary" value="@Resources.ButtonAction_Reset" />
                </div>

            </form>
        </div>
    </div>
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js") " type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<script type="text/javascript">
    $(document).ready(function () {
        FeeCriteriaParametersAndValues.Initialize();
    });
</script>

